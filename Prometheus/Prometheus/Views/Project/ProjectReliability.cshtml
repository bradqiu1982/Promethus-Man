@model IEnumerable<Prometheus.Models.IssueViewModels>

@{
    ViewBag.Title = "ProjectReliability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-4">
            <h2>Reliability</h2>
    </div>

    <div class="col-lg-1">
            <h2><a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a></h2>
    </div>
    <div class="col-lg-7"></div>
</div>

<hr/>

@if (Model != null)
{
    <script src="~/Scripts/highcharts.js"></script>
        <script src="~/Scripts/exporting.js"></script>

    if (ViewBag.chartscript != null)
    {
        @Html.Raw(ViewBag.chartscript)

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Failure</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-12">
                            <div id="failurepie" style="min-width: 310px; height: 300px; margin: 0 auto"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    var i = 0;
    <table id="firsttable" name="firsttable"  class="display" cellspacing="0">
        <thead class="header">
            <tr>
                <th>Product</th>
                <th>TestType</th>
                <th>FailRate</th>
                <th>Summary</th>
                <th>Status</th>
                <th>RootCause</th>
                <th>FV</th>
                <th>Containment Action</th>
                <th>Corrective Action</th>
                <th>Owner</th>
                <th>Rel.Engineer</th>
                <th>ReportDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                @*<tr>
                        <td width="10%">
                            <div class="row">
                                <div class="col-lg-4">
                                    @(Model.Count() - i)
                                </div>
                                <div class="col-lg-8">
                                    <button data-toggle="tooltip" title="Low Yield Trigger" class="form-control" value="@item.IssueKey" type="button" onclick="LowYieldWarning(this)">
                                        <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td colspan="9" width="80%">
                            <a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">
                                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                                @rmatitle.Substring(0, rmatitle.Length > 125 ? 125 : rmatitle.Length)
                            </a>
                        </td>
                        <td width="10%">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus2(item.Resolution))</td>
                    </tr>*@
                <tr>
                    <td>@item.ProductType</td>
                    <td>@item.TestType</td>
                    <td>@item.FailQTY/@item.TotalQTY</td>
                    <td><a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></td>
                    <td>@Html.Raw(@Prometheus.Models.Resolute.ColorStatus2(item.Resolution))</td>

                    @if (item.RootCauseCommentList.Count > 0)
                    {
                        <td><a href="/Issue/ShowRootCause?issuekey=@(item.IssueKey)" target="_blank">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(Prometheus.Models.Resolute.Done))</a></td>
                    }
                    else
                    {
                        <td>@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(Prometheus.Models.Resolute.Pending))</td>
                    }
                    <td>@item.FVCode</td>

                    @if (item.ContainmentActions.Count > 0)
                    {
                        <td><a href="/Issue/ShowContainmentAction?issuekey=@(item.IssueKey)" target="_blank">@Html.Raw(item.ContainmentActionStatus())</a></td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }

                    @if (item.CorrectiveActions.Count > 0)
                    {
                        <td><a href="/Issue/ShowCorrectiveAction?issuekey=@(item.IssueKey)" target="_blank">@Html.Raw(item.CorrectiveActionStatus())</a></td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }
                    <td><a href="/User/UserCenter?username=@item.Assignee">@item.Assignee.Split(new string[] { "@" }, StringSplitOptions.None)[0]</a></td>
                    <td><a href="/User/UserCenter?username=@item.Reporter">@item.Reporter.Split(new string[] { "@" }, StringSplitOptions.None)[0]</a></td>
                    <td width="10%">@item.ReportDate.ToString("MM/dd-yy")</td>
                </tr>
                i = i + 1;
            }
        </tbody>

    </table>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#firsttable").DataTable({
                    'iDisplayLength': 50,
                    'aLengthMenu': [[25, 50, 100, -1],
                                    [25, 50, 100, "All"]],
                    "bAutoWidth": true,
                    "aaSorting": []
                });
            });

            function LowYieldWarning(oBT) {
                if (confirm("Warning: only RMA assignee can trigger Low Yield Trigger.")) {
                    var myurl = "/Project/LowYieldWarn?IssueKey=" + oBT.value;
                    window.open(myurl, '_blank');
                }
            }
        </script>
}

