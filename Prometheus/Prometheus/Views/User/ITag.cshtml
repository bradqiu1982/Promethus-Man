
@{
    ViewBag.Title = "ITag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <ol class="breadcrumb" style="font-size:18px">
        <li><a href="/User/UserCenter?username=@(ViewBag.RealUserID)">@ViewBag.UserName Center</a></li>
        <li class="active">I Tag</li>
    </ol>
</div>


@if (ViewBag.projectlist != null && ViewBag.taglist != null)
{
    using (Html.BeginForm("AddUserShareTag", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-4"><h3>Add New Tags</h3></div>
            <div class="col-lg-8"></div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-lg-2"><label class="control-label">Project Tag</label></div>
            <div class="col-lg-3">@Html.DropDownList("projectlist", null, new { @id = "projectlist", @class = "form-control" })</div>
            <div class="col-lg-2"><input type="submit" value="Add Tag" id="updatetag" name="updatetag" class="btn btn-default" /></div>
            <div class="col-lg-4"></div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-lg-2"><label class="control-label">Document Tag</label></div>
            <div class="col-lg-3">@Html.DropDownList("taglist", null, new { @id = "taglist", @class = "form-control" })</div>
            <div class="col-lg-2"><input type="submit" value="Add Tag" id="updatetag" name="updatetag" class="btn btn-default" /></div>
            <div class="col-lg-4"></div>
        </div>
    }
}

<hr />

@if (ViewBag.usertaglist != null)
{
    using (Html.BeginForm("UpdateUserShareTag", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


            <div class="row">
                <div class="col-lg-3"><h3>User Booked Tags</h3></div>
                <div class="col-lg-9"></div>
            </div>
            <hr/>

            <div class="row"></div>

        for (var idx = 0; idx < ViewBag.usertaglist.Count; idx++)
        {
                <div class="col-lg-4">
                    <div class="col-lg-3">
                        <input type="checkbox" checked="checked" id="check@(idx)" name="check@(idx)" value="@(ViewBag.usertaglist[idx])" />
                    </div>
                    <div class="col-lg-9">
                        <label class="control-label">@(ViewBag.usertaglist[idx])</label>
                    </div>
                </div>
        }

        
        <div class="row"></div>
        <hr/>

            <div class="row">
                <div class="col-lg-3"><input type="submit" value="Update Tag" id="updatetag" name="updatetag" class="btn btn-default" /></div>
                <div class="col-lg-3"><input type="submit" value="Match Tag" id="matchpostfile" name="matchpostfile" class="btn btn-default" /></div>
                <div class="col-lg-9"></div>
            </div>

    }
}
