    </div>

    <div class="row">
        <div class="form-group">
            <div class="row col-lg-12">
                <div class="form-group">
                    <div class="col-lg-3">
                        <input type="submit" value="Submit" id="updateisu" name="updateisu" class="btn btn-default" />
                    </div>
                    <div class="col-lg-3">
                        @if (ViewBag.isassignee != null && ViewBag.isassignee)
                {
                            <input type="submit" value="Delete" id="deleteisu" name="deleteisu" class="btn btn-default" />
                        }
                    </div>
                    <div class="col-lg-3">
                        @if (ViewBag.isassignee != null
        && ViewBag.isassignee
        && Model.FailureDetailCommentList.Count > 0
        && Model.RootCauseCommentList.Count > 0)
                        {
                            <input type="submit" value="Link2DebugTree" id="linkisu" name="linkisu" class="btn btn-default" />
                        }
                        else if (ViewBag.isassignee != null
                            && ViewBag.isassignee)
                        {
                            <button type="button" disabled>Link2DebugTree</button>
                        }
                    </div>
                    <div class="col-lg-3">
                        @if (ViewBag.isassignee != null && ViewBag.isassignee)
                        {
                            <button class="btn btn-default" type="button" value="IssueKey=@(Model.IssueKey)&ToWho=" onclick="PushTask(this)">Push</button>
                            <input class="form-control text-box single-line" value="" id="pushtowho" name="pushtowho" type="hidden" />
                        }
                    </div>

                    <script type="text/javascript">
                        function PushTask(oBT)
                        {
                            document.getElementById("pushtowho").value = oBT.value;
                            $('#towhotag').modal({ backdrop: 'static' });
                        }

                        function realpush() {
                            var myurl = ""

                            if (document.getElementById("towhoinput").value) {
                                myurl = "/Issue/IPush?" + document.getElementById("pushtowho").value + document.getElementById("towhoinput").value;
                            }
                            else {
                                myurl = "/Issue/IPush?" + document.getElementById("pushtowho").value + document.getElementById("towholist").value;
                            }

                            $('#towhotag').modal('hide');

                            window.location.href = myurl
                        }
                    </script>
                </div>
            </div>
        </div>
        </div>

        <div class="modal" id="attachtag" tabindex="-1" role="dialog" aria-labelledby="attachtagLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="attachtagLabel">Share Document Tag</h4>
                    </div>
                    <div class="row"></div>
                    <hr />
                    <div class="row"></div>
                    @if (ViewBag.tobechoosetags != null)
                    {
                        for (var idx = 0; idx < ViewBag.tobechoosetags.Count; idx++)
                        {
                            <div class="col-lg-4">
                                <div class="col-lg-3">
                                    <input type="checkbox" id="attachtagcheck@(idx)" name="attachtagcheck@(idx)" value="@(ViewBag.tobechoosetags[idx])" />
