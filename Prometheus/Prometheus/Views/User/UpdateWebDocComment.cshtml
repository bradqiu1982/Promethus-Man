@model Prometheus.Models.ErrorComments

@{
    ViewBag.Title = "UpdateWebDocComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-4"><h2>Update Web Doc Comment</h2></div>
    <div class="col-lg-1"><h2><a data-toggle="tooltip" title="Back To Web Doc" href="/User/WebDoc?DocKey=@(Model.ErrorKey)&Creator=@(ViewBag.Creator)"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a></h2></div>
    <div class="col-lg-7"></div>
</div>

<hr />

<script src="../../ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("UpdateWebDocComment", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">

                <div class="form-group">
                    <label class="control-label">Comment</label>
                </div>

                <div class="form-group">
                    <div>
                        <textarea name="editor1" id="editor1" rows="10" cols="80">@Model.Comment</textarea>
                        <script>
                            CKEDITOR.replace('editor1', { htmlEncodeOutput: true, filebrowserUploadUrl: '/userfiles/Upload.ashx' });
                        </script>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="form-group">
