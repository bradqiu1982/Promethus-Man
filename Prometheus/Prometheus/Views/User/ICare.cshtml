
@{
    ViewBag.Title = "ICare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-1 text-right">
        <img src="~/Content/images/ucicon/ICareIcons.png" style="height:60px; width:60px">
    </div>
    <div class="col-lg-11">
        <ol class="breadcrumb" style="font-size:18px">
            <li><a href="/User/UserCenter?username=@(ViewBag.RealUserID)&month=@(ViewBag.month)">@ViewBag.UserName Center</a></li>
            <li class="active">I Care</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<script src="~/Scripts/highcharts.js"></script>
<script src="~/Scripts/exporting.js"></script>

@if (ViewBag.chooseuserlist != null)
{
    using (Html.BeginForm("OperateICare", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-3"><h3 style="font-family:'Arial Narrow';">Add People</h3></div>
            <div class="col-lg-9"></div>
        </div>

        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-8">
                    <div class="col-lg-7">
                        @Html.DropDownList("chooseuserlist", null, new { @id = "chooseuserlist", @class = "form-control", @style = "font-family:'Arial Narrow';border-color:#006DC0;" })
                    </div>
                    <div class="col-lg-1">

                    </div>
                    <div class="col-lg-2">
                        <button id="adduser" name="adduser" class="form-control" style="background-color:#006DC0;color:white;"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                    </div>
                    <div class="col-lg-2">
                        <button id="deleteuser" name="deleteuser" class="form-control" style="background-color:#006DC0;color:white;"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                    </div>
                </div>
                <div class="col-lg-4">

                </div>
            </div>
        </div>

    }

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    using (Html.BeginForm("OperateICare", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "viewform", name = "viewform" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-3"><h3 style="font-family:'Arial Narrow';">View By Month</h3></div>
            <div class="col-lg-9"></div>
        </div>

        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-8">
                    <div class="col-lg-7">
                        @Html.DropDownList("monthlist", null, new { @id = "monthlist", @class = "form-control", @style = "font-family:'Arial Narrow';border-color:#006DC0;", @onchange = "ViewCare()" })
                    </div>
                    <div class="col-lg-5">
                    </div>
                </div>
                <div class="col-lg-4">
                </div>
            </div>
        </div>

        <script type="text/javascript">
            function ViewCare()
            {
                $('#viewform').submit();
            }
        </script>

        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>


        }
        <hr />
}



@if (ViewBag.icareissuelist != null && ViewBag.icareranklist != null)
{
    var idx = 0;
    foreach (var item in ViewBag.icareissuelist)
    {

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a href="/User/UserCenter?username=@ViewBag.icareranklist[idx].CurrentUser">@ViewBag.icareranklist[idx].CurrentUser.Split(new char[] { '@' })[0] Total Rank @ViewBag.icareranklist[idx].TotalRank</a>
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="row col-lg-12">
                            <div class="row">
                                <div id="@((ViewBag.icareranklist[idx].CurrentUser.Split(new char[] { '@' })[0]).Replace(".",""))userrankchart" style="height: 400px; margin: 0 auto;width:648px"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
                @Html.Raw(ViewBag.icareranklist[idx].UserRankTrend)

        idx = idx + 1;
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><a href="/User/UserCenter?username=@item.CurrentUser">@item.CurrentUser.Split(new char[] { '@' })[0] Issues</a></h3>
                    </div>
                    <div class="panel-body">
                        <div class="row col-lg-12">
                            <div class="col-lg-3">
                                <a href="/User/UserIssues?username=@item.CurrentUser&month=@ViewBag.icaremonth" target="_blank">
                                    Working Issue <span class="badge alert-info">@item.WorkingIssueCount.ToString()</span>
                                </a>
                            </div>
                            <div class="col-lg-3">
                                <a href="/User/UserIssues?username=@item.CurrentUser&month=@ViewBag.icaremonth" target="_blank">
                                    Done Issue <span class="badge alert-success">@item.DoneIssueCount.ToString()</span>
                                </a>
                            </div>
                            <div class="col-lg-3">
                                <a href="/User/UserIssues?username=@item.CurrentUser&month=@ViewBag.icaremonth" target="_blank">
                                    Pending Issue <span class="badge alert-danger">@item.PendingIssueCount.ToString()</span>
                                </a>
                            </div>
                            <div class="col-lg-3"></div>
                        </div>
                        <hr />
                        <div class="row col-lg-12">
                            <div class="row">
                                <div id="@((item.CurrentUser.Split(new char[] { '@' })[0]).Replace(".",""))issuetrendchart" style="height: 400px; margin: 0 auto;width:648px"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
                @Html.Raw(item.UserIssueTrend)
    }

}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>
