@model Prometheus.Models.UserBlogVM
@{
    ViewBag.Title = "WebDoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3">
        <h2>Blog Doc</h2>
    </div>
    <div class="col-lg-2">
        <h2><a data-toggle="tooltip" title="Goto User Blog" href="/User/IBLOG"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a></h2>
    </div>
    <div class="col-lg-7"></div>
</div>

<script src="../../ckeditor/ckeditor.js"></script>

@if (Model != null)
{
    <hr/>

    if (Model.ContentType == Prometheus.Models.UserBlogContentType.ATTACH)
    {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-11">
                            <h3><a href="@Model.Content" target="_blank">@Model.Title</a></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="form-horizontal">
            <div class="form-group">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-lg-11"><h3 class="panel-title">@Model.Title</h3></div>
                                    <div class="col-lg-1">
                                        <button class="form-control" type="button" value="DocKey=@Model.DocKey" onclick="ModifyBlogDoc(this)">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body" style="overflow-y: scroll;overflow-x: scroll;">
                            @Html.Raw(Model.Content)
                        </div>
                    </div>
                    <script type="text/javascript">
                        function ModifyBlogDoc(oBT) {
                            if (oBT.value) {
                                window.location.href = "/User/ModifyBlogDoc?" + oBT.value;
                            }
                        }
                    </script>
            </div>
        </div>
    }

    foreach (var item in Model.CommentList)
    {
        <hr />
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-lg-1">
                                        <h3 class="panel-title">Comment</h3>
                                    </div>
                                    <div class="col-lg-10"></div>
                                    <div class="col-lg-1">
                                            <button class="form-control" type="button" value="ErrorKey=@(item.ErrorKey)&CommentType=@(item.CommentType)&Date=@(item.CommentDate.ToString())&Creator=@(Model.UserName)" onclick="UpdateErrorComment(this)">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </button>
                                    </div>
                                    <script type="text/javascript">
                                        function UpdateErrorComment(oBT) {
                                            if (oBT.value) {
                                                window.location.href = "/User/UpdateWebDocComment?" + oBT.value;
                                            }
                                        }
                                    </script>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body" style="overflow-y: scroll;overflow-x: scroll;">
                            @Html.Raw(item.Comment)
                        </div>
                        <div class="panel-footer text-right">
                            Reporter: <a href="/User/UserCenter?username=@item.Reporter">@item.Reporter.Split(new char[] { '@' })[0]</a> @item.CommentDate.ToString("yyyy-MM-dd hh:mm:ss")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <hr />

    using (Html.BeginForm("WebDoc", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-lg-12">
                    <label class="control-label">Comment</label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <textarea name="docinputeditor" id="docinputeditor" rows="30" cols="80"></textarea>
                    <script>
                        CKEDITOR.replace('docinputeditor', { htmlEncodeOutput: true, filebrowserUploadUrl: '/userfiles/Upload.ashx' });
                    </script>
                </div>
            </div>

            <div class="form-group">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-4">
                            <span class="btn btn-default btn-file" id="choosefile6">
                                Editor Attachement <input type="file" name="file6" id="file6" runat="server" onchange="ShowFileNames6(this)" />
                            </span>
                        </div>
                        <div class="col-lg-8">
                        </div>
                    </div>
                    <script type="text/javascript">
                                            function ShowFileNames6(oFile) {
                                                ajaxFileUpload();
                                            }
                                            function ajaxFileUpload() {
                                                $.ajaxFileUpload
                                                (
                                                    {
                                                        url: '/userfiles/ImageUpload.ashx',
                                                        secureuri: false,
                                                        fileElementId: 'file6',
                                                        dataType: 'HTML',
                                                        success: function (data, status)
                                                        {
                                                            var myeditor = $('#docinputeditor');
                                                            var wholeval = myeditor.val() + data;
                                                            myeditor.val(wholeval);
                                                            CKEDITOR.instances.docinputeditor.setData(wholeval);
                                                        },
                                                        error: function (e)
                                                        {
                                                            alert(e);
                                                        }
                                                    }
                                                )
                                                return false;
                                            }
                    </script>
                </div>
            </div>

            <hr />
            <div class="form-group">
                <div class="row">
                    <input class="form-control text-box single-line" value="@(Model.DocKey)" id="DocKey" name="DocKey" type="hidden" />
                </div>
                <div class="row">
                    <input class="form-control text-box single-line" value="@(Model.DocURL)" id="DOCURL" name="DOCURL" type="hidden" />
                </div>
                <div class="row">
                    <input class="form-control text-box single-line" value="@(Model.UserName)" id="DOCCREATOR" name="DOCCREATOR" type="hidden" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="col-lg-10"></div>
                    <div class="col-lg-2">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
}

