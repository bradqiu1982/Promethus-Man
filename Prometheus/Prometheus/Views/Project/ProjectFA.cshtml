@model IEnumerable<Prometheus.Models.ProjectFAViewModules>

@{
    ViewBag.Title = "ProjectFA";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fadata = (List<Prometheus.Models.ProjectFAViewModules>)Model;
}

<div class="row">
    <div class="col-md-2">
        <h2>Project FA</h2>
    </div>
    <div class="col-md-2">
        @if (ViewBag.chartscript == null && fadata != null && fadata.Count > 0)
        {
            <h2><a data-toggle="tooltip" title="Goto FA Page" href="/Project/ProjectFA?ProjectKey=@(fadata[0].TestData.ProjectKey)"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a></h2>
        }
        else
        {
            <h2><a data-toggle="tooltip" title="Goto FA Page" href="/Project/ViewAll"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></a></h2>
        }
     </div>
    <div class="col-md-9"></div>
</div>

<hr/>

<script src="~/Scripts/highcharts.js"></script>
<script src="~/Scripts/exporting.js"></script>

    @if (ViewBag.chartscript != null)
    {
        @Html.Raw(ViewBag.chartscript)

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Failure</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div id="failurepie" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-1 text-center">ModuleSN</div>
        <div class="col-md-2 text-center">ErrAbbr</div>
        <div class="col-md-2 text-center">FA Status</div>
        <div class="col-md-2 text-center">Assignee</div>
        <div class="col-md-4 text-center">Issue</div>
        <div class="col-md-1 text-center">Attachment</div>
    </div>
    <hr />
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-1 text-center">@item.TestData.ModuleSerialNum</div>
                <div class="col-md-2 text-center"><a href="/Project/ProjectErrAbbr?ProjectKey=@item.TestData.ProjectKey&ErrAbbr=@item.TestData.ErrAbbr">@item.TestData.ErrAbbr</a></div>
                <div class="col-md-2 text-center">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(@item.IssueData.Resolution))</div>
                <div class="col-md-2 text-center"><a href="/User/UserCenter?username=@item.IssueData.Assignee">@item.IssueData.Assignee.Split(new char[] { '@' })[0]</a></div>
                <div class="col-md-4 text-center"><a href="/Issue/UpdateIssue?issuekey=@item.IssueData.IssueKey">@item.IssueData.Summary</a></div>
                <div class="col-md-1 text-center">
                    @if (item.IssueData.AttachList.Count > 0)
                    {
                        <a href="/Issue/IssueAttach?issuekey=@item.IssueData.IssueKey">
                            <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
                        </a>
                    }
                </div>
            </div>
            <hr />
        }
    }
