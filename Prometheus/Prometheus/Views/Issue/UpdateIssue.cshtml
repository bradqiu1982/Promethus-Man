@model Prometheus.Models.IssueViewModels

@{
    ViewBag.Title = "Update Task";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    var step_idx = 1;
}

@if (ViewBag.isassignee != null && ViewBag.isassignee)
{
}
else
{
    <script type="text/javascript">
            $(document).ready(function () {
                npireadmode();
        });
    </script>
}

<script src="~/Scripts/lobilist/lib/jquery/jquery.ui.touch-punch-improved.js"></script>
<script src="~/Scripts/lobilist/dist/lobilist_tasklink.js"></script>
<script src="~/Scripts/lobilist/lib/lobibox/js/lobibox.min.js"></script>
<script src="~/Scripts/lobilist/lib/highlight/highlight.pack.js"></script>

<div class="row">
    <div class="nav navbar-nav navbar-left">
        <img src="~/Content/images/PJ/Task.png" height="35" width="35">
    </div>
    <div class="nav navbar-nav navbar-left">
        <ol class="breadcrumb">
            <li data-toggle="modal" data-target="#myModal"><a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll">All Projects</a></li>
            @if (Model != null)
            {
                <li data-toggle="modal" data-target="#myModal"><a data-toggle="tooltip" title="Goto Project Detail" href="/Project/ProjectDetail?ProjectKey=@(Model.ProjectKey)">Project Detail</a></li>
            }
            @if (Model != null)
            {
                <li data-toggle="modal" data-target="#myModal"><a data-toggle="tooltip" title="Goto Project Task" href="/Project/ProjectIssues?ProjectKey=@(Model.ProjectKey)">Project Task</a></li>
            }

            @if (Model != null && !string.IsNullOrEmpty(Model.ParentIssueKey))
            {
                <li data-toggle="modal" data-target="#myModal"><a data-toggle="tooltip" title="Goto Parent Task" href="/Issue/UpdateIssue?issuekey=@(Model.ParentIssueKey)">Parent Task</a></li>
            }
            <li class="active">Update Task</li>
        </ol>
    </div>
    <div class="col-xs-2">
        @if (Model != null && string.IsNullOrEmpty(Model.ParentIssueKey))
        {
            using (Html.BeginForm("PrepareSubIssue", "Issue", FormMethod.Post, new { enctype = "multipart/form-data", id = "subtaskid", name = "subtaskid" }))
            {
                @Html.AntiForgeryToken()
                if (Model != null && !string.IsNullOrEmpty(Model.IssueKey))
                {
                    <input class="form-control text-box single-line" value="@(Model.IssueKey)" id="HIssueKey" name="HIssueKey" type="hidden" />
                }
                else
                {
                    <input class="form-control text-box single-line" id="HIssueKey" name="HIssueKey" type="hidden" value="" />
                }
                if (Model != null && !string.IsNullOrEmpty(Model.ProjectKey))
                {
                    <input class="form-control text-box single-line" value="@(Model.ProjectKey)" id="HProjectKey" name="HProjectKey" type="hidden" />
                }
                else
                {
                    <input class="form-control text-box single-line" id="HProjectKey" name="HProjectKey" type="hidden" value="" />
                }

                <button type="submit" class="form-control" style="background-color:#006DC0;height:3em;color:white;">Add Sub-Task</button>
            }
        }
        else if (Model != null && !string.IsNullOrEmpty(Model.ParentIssueKey))
        {

        }
        <script type="text/javascript">
            function AddSubTask() {
                $("#subtaskid").submit();
                return false;
            }
        </script>
    </div>
    <div class="col-xs-2">
        <button type="button" class="form-control" style="background-color:#006DC0;height:3em;color:white;" onclick="linktask()">Link Task</button>
        <script type="text/javascript">
            function linktask()
            {
                $('#linktaskmodal').modal({ backdrop: 'static' });
            }
        </script>
    </div>
</div>

@if (ViewBag.isassignee != null && ViewBag.isassignee)
{
    <div class="row">
        <div class="col-xs-12">&nbsp;</div>
    </div>
}
else
{
    <div class="alert alert-success" role="alert" style="padding:4px!important">
        You are in review mode now.  If you want edit current page, please click  <a MYTP="HOVER" id="editablebt" name="editablebt" onclick="changepagemode()">
            <span class="glyphicon glyphicon-edit" title="Edit Mode" data-toggle="tooltip"></span>
        </a>
    </div>
}

<script src="../../ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("UpdateIssue", "Issue", FormMethod.Post, new { enctype = "multipart/form-data", id = "issueform", name = "issueform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row" data-intro = "Edit information of your issue."  data-step="@(step_idx++)">
        <div class="col-xs-2" MYTP="orange" style="font-family:'Arial Narrow';font-size:18px"><strong>&nbsp;&nbsp;Information</strong></div>
        <div class="col-xs-10">
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <label class="control-label col-xs-2" for="projectlist">Project<font color="red">*</font></label>
                        <div class="col-xs-10">
                            @Html.DropDownList("projectlist", null, new { @id = "projectlist", @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <label class="control-label col-xs-2" for="issuetypelist">TaskType<font color="red">*</font></label>
                        <div class="col-xs-10">
                            @Html.DropDownList("issuetypelist", null, new { @id = "issuetypelist", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <label class="control-label col-xs-2" for="Summary">Summary<font color="red">*</font></label>
                        <div class="col-xs-10">
                            @if (Model != null && !string.IsNullOrEmpty(Model.Summary))
                            {
                                <input class="form-control text-box single-line" value="@Model.Summary" readonly="readonly" data-val="true" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$" data-val-required="The field is required." id="Summary" name="Summary" type="text" />
                            }
                            else
                            {
                                <input class="form-control text-box single-line" data-val="true" data-val-length="The field must be a string with a minimum length of 2 and a maximum length of 180." data-val-length-max="180" data-val-length-min="2" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$" data-val-required="The field is required." id="Summary" name="Summary" type="text" value="" />
                            }

                            <span class="field-validation-valid text-danger" data-valmsg-for="Summary" data-valmsg-replace="true"></span>
                        </div>

                    </div>
                    <div class="col-xs-6">
                        <label class="control-label col-xs-2" for="resolutionlist">Status<font color="red">*</font></label>
                        <div class="col-xs-10">
                            @if (ViewBag.isassignee != null && ViewBag.isassignee)
                            {
                                @Html.DropDownList("resolutionlist", null, new { @id = "resolutionlist", @class = "form-control", @onchange = "chooseissuetag()" })
                            }
                            else
                            {
                                @Html.DropDownList("resolutionlist", null, new { @id = "resolutionlist", @class = "form-control", @readonly = "readonly" })
                            }

                        </div>
                    </div>
                    <script type="text/javascript">
                                function chooseissuetag() {
                                    if (document.getElementById("resolutionlist")
                                        && (document.getElementById("resolutionlist").value === "Fixed"
                                        || document.getElementById("resolutionlist").value === "Done")) {
                                        $('#issuetag').modal({ backdrop: 'static' });
                                    }
                                }
                    </script>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <label class="control-label col-xs-2" for="prioritylist">Priority</label>
                        <div class="col-xs-10">
                            @Html.DropDownList("prioritylist", null, new { @id = "prioritylist", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <label class="control-label col-xs-2" for="assigneelist">Assignee</label>
                        <div class="col-xs-10">
                            @Html.DropDownList("assigneelist", null, new { @id = "assigneelist", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <input type="hidden" id="hasEditDueDate" name="hasEditDueDate" value="@ViewBag.hasEditDueDate" />
                        <label class="control-label col-xs-2" for="DueDate">DueDate<font color="red">*</font></label>
                        <div class="col-xs-10">
                            @if (Model != null && string.Compare(Model.DueDate.ToString("yyyy-MM-dd"), "0001-01-01") != 0)
                            {
                                if (ViewBag.hasEditDueDate)
                                {
                                    <input class="form-control text-box single-line edit_DueDate" value="@Model.DueDate.ToString("yyyy-MM-dd")" data-val="true" data-val-required="The DueDate field is required." id="DueDate" name="DueDate" type="text" />
                                }
                                else
                                {
                                    <input class="form-control text-box single-line" readonly="readonly" value="@Model.DueDate.ToString("yyyy-MM-dd")" data-val="true" data-val-required="The DueDate field is required." id="DueDate" name="DueDate" type="text" />

                                }
                            }
                            else
                            {
                                <input class="form-control text-box single-line edit_DueDate" data-val="true" data-val-required="The DueDate field is required." id="DueDate" name="DueDate" type="text" value="" />
                            }
                            <span class="field-validation-valid text-danger" data-valmsg-for="DueDate" data-valmsg-replace="true"></span>
                        </div>

                    </div>
                    <div class="col-xs-6">
                        <label class="control-label col-xs-2">Creator</label>
                        <div class="col-xs-10">
                            @if (Model != null && !string.IsNullOrEmpty(Model.Reporter))
                            {
                                <input class="form-control text-box single-line" value="@Model.Reporter" readonly="readonly" type="text" />
                            }
                            else
                            {
                                <input class="form-control text-box single-line" readonly="readonly" type="text" value="" />
                            }
                        </div>
                    </div>
                    <script type="text/javascript">
                    $(document).ready(function () {
                        $(".edit_DueDate").datepicker({
                            changeMonth: true,
                            changeYear: true,
                            dateFormat: 'yy-mm-dd'
                        });
                    });
                    </script>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    @if (ViewBag.birootcauselist != null)
                    {
                            <div class="col-xs-6">
                                <label class="control-label col-xs-2" for="birootcauselist">BI RootCause</label>
                                <div class="col-xs-10">
                                    @Html.DropDownList("birootcauselist", null, new { @id = "birootcauselist", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-xs-6"></div>
                    }
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">&nbsp;</div>
    </div>

    <div class="row" data-intro = "Edit releated people of your issue."  data-step="@(step_idx++)">
        <div class="col-xs-2" style="font-family:'Arial Narrow';font-size:18px"><strong>&nbsp;&nbsp;Related People</strong></div>
        <div class="col-xs-10">
            <div class="row">
                <div class="form-group">
                    <div class="col-xs-12" data-toggle="tooltip" data-placement="center" title="Exampel: Email Address; Email Address;Email Address;...">
                        @if (Model != null && !string.IsNullOrEmpty(Model.RelativePeoples))
                        {
                            <textarea class="form-control" name="RPeopleAddr" id="RPeopleAddr" onclick="chooserelatedpeople()" style="min-width: 100%;min-height:40px;overflow-y: scroll;overflow-x: scroll;" data-val="true" data-val-length="The field must be a string with a minimum length of 6 and a maximum length of 800." data-val-length-max="800" data-val-length-min="6" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$">@Model.RelativePeoples</textarea>
                        }
                        else
                        {
                            <textarea class="form-control" name="RPeopleAddr" id="RPeopleAddr" onclick="chooserelatedpeople()" style="min-width: 100%;min-height:40px;overflow-y: scroll;overflow-x: scroll;" data-val="true" data-val-length="The field must be a string with a minimum length of 6 and a maximum length of 800." data-val-length-max="800" data-val-length-min="6" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$"></textarea>
                        }
                    </div>
                    <span class="field-validation-valid text-danger" data-valmsg-for="RPeopleAddr" data-valmsg-replace="true"></span>
                </div>
                <script type="text/javascript">
                    function chooserelatedpeople() {
                        document.getElementById("towhoinput1").value = document.getElementById("RPeopleAddr").value;
                        $('#relatedmodal').modal({ backdrop: 'static' });
                    }

                    function fillreleatepeople() {
                        $('#relatedmodal').modal('hide');
                        document.getElementById("RPeopleAddr").value = document.getElementById("towhoinput1").value;
                        document.getElementById("RPeopleAddr").focus();
                    }
                </script>
            </div>
        </div>
    </div>

    <hr style="border-color:#006DC0;" />

        <div class="row" data-intro = "Upload or download attachments of your issue."  data-step="@(step_idx++)">
            <div MYTP="green" class="row" style="margin-left:3px">
                <div class="col-xs-2">
                    <a data-toggle="collapse" href="#attachwell" aria-expanded="false" aria-controls="collapseExample" style="font-size:18px;font-family:'Arial Narrow';">
                        <font color="black"><strong>&nbsp;&nbsp;@(Model.AttachList.Count) Attachements</strong></font>&nbsp;&nbsp;&nbsp;&nbsp;<img src="~/Content/images/icon/extend.png" style="height:25px; width:14px">
                    </a>
                </div>
                <div class="col-xs-10" data-intro = "Upload attachment of your issue."  data-step="@(step_idx++)">
                    <div class="col-xs-3">
                        <span class="btn btn-default btn-file" id="choosefile3" style="padding:0px;background-color:transparent !important;border-color:transparent !important;">
                            <img src="~/Content/images/icon/Upload.png" MYTP="HOVER" style="height:20px; width:34px"> <input type="file" name="files3" id="file3" runat="server" onchange="ShowFileNames3(this)" />
                        </span>
                    </div>
                    <div class="col-xs-9">
                        <div class="col-xs-11">
                            <label class="control-label" id="showfile3" name="showfile3"></label>
                        </div>
                        <div class="col-xs-1">
                            <input class="form-control text-box single-line" value="" id="attachmentupload" name="attachmentupload" type="hidden" />
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                function ShowFileNames3(oFile) {
                    $('#showfile3').text(oFile.value);
                    document.getElementById("attachmentupload").value = oFile.value;
                    $('#attachtag').modal({ backdrop: 'static' });
                }

                function attachsubmit() {
                    $('#attachtag').modal('hide');
                    $('#issueform').submit();
                    return false;
                }
                </script>
            </div>
            <div class="row">
                <div class="col-xs-12">&nbsp;</div>
            </div>

            <div class="row" style="margin-left:10px" data-intro = "View attachments of your issue."  data-step="@(step_idx++)">
                <div class="collapse in" id="attachwell">
                    <div class="row form-group">
                        @if (Model != null && Model.AttachList.Count > 0)
                        {
                            <table style="margin-left: 2%; width: 80%;">
                                <thead>
                                    <colgroup>
                                        <col style="width: 60%;">
                                        <col style="width: 30%;">
                                        <col style="width: 10%;">
                                    </colgroup>
                                </thead>
                                @foreach (var item in Model.AttachList)
                                {
                                    var realfn = "";
                                    var tempfn = "";
                                    if (item.Contains("<a href"))
                                    {
                                        tempfn = item.Split(new string[] { "<a href=", "target=" }, StringSplitOptions.None)[1].Replace("\"", "").Trim();
                                        var tempfns = tempfn.Split(new string[] { "/" }, StringSplitOptions.None);
                                        realfn = tempfns[tempfns.Length - 1];
                                    }
                                    else
                                    {
                                        tempfn = item;
                                        var tempfns = item.Split(new string[] { "/" }, StringSplitOptions.None);
                                        realfn = tempfns[tempfns.Length - 1].Trim();
                                    }
                                    var filedate = Prometheus.Models.IssueViewModels.GetFileDate(realfn);
                                    <tr>
                                        <td>
                                            <a href="@tempfn" target="_blank">
                                                <span class="glyphicon glyphicon-paperclip" aria-hidden="true" style="width: 20px;"></span>
                                                <span>@realfn</span>
                                            </a>
                                        </td>
                                        <td>@filedate</td>
                                        <td>
                                            @if ( ! item.Contains("<a href") && ViewBag.isassignee != null && ViewBag.isassignee)
                                            {
                                                <img src="~/Content/images/icon/delete2.png" MYTP="HOVER" data-toggle="tooltip" title="Delete" style="height:30px; width:18px" onclick="DeleteAttachment('@realfn')">
                                            }
                                        </td>
                                    </tr>
                                }
                            </table>
                            <script type="text/javascript">
                                function DeleteAttachment(oBT) {
                                    if (confirm("Do you real want to delete this attachment?")) {
                                        window.location.href = '/Issue/DeleteAttachment?issuekey=' + document.getElementById("HIssueKeyForDelete").value + '&filename=' + oBT
                                    }
                                    else {
                                        window.location.href = '/Issue/UpdateIssue?issuekey=' + document.getElementById("HIssueKeyForDelete").value
                                    }
                                }
                            </script>
                        }
                    </div>
                </div>
            </div>
        </div>

        <hr style="border-color:#006DC0;" />

    if (Model != null && Model.GeneralActions.Count > 0)
    {
        <div class="row" data-intro = "Sub tasks of your issue."  data-step="@(step_idx++)">
            <div  MYTP="yello"  class="row" style="margin-left:3px">
                <div class="col-xs-12">
                    <a data-toggle="collapse" href="#subtasks" aria-expanded="false" aria-controls="collapseExample" style="font-size:18px;font-family:'Arial Narrow';">
                        <font color="black"><strong>&nbsp;&nbsp;@(Model.GeneralActions.Count) Sub Tasks</strong></font>&nbsp;&nbsp;&nbsp;&nbsp;<img src="~/Content/images/icon/extend.png" style="height:25px; width:14px">
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">&nbsp;</div>
            </div>
            <div class="row" style="margin-left:10px">
                <div class="collapse in" id="subtasks">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-8">
                                <div class="well" style="margin-bottom:8px;background-color:transparent !important;border-left-color:#006DC0;border-top-color:transparent !important;border-right-color:transparent !important;border-bottom-color:transparent !important;border-top-left-radius:0px;border-bottom-left-radius:0px;padding-top:4px;padding-bottom:4px">
                                    <div class="row">
                                        <div class="col-xs-4">Summary</div>
                                        <div class="col-xs-2">Status</div>
                                        <div class="col-xs-2">Asignee</div>
                                        <div class="col-xs-2">DueDate</div>
                                        <div class="col-xs-2"></div>
                                    </div>
                                    @foreach (var item in Model.GeneralActions)
                                    {
                                        <div class="row">
                                            <div class="col-xs-4"><a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></div>
                                            <div class="col-xs-2">@item.Resolution</div>
                                            <div class="col-xs-2"><a href="/User/UserCenter?username=@item.Assignee">@item.Assignee.Split(new char[] { '@' })[0]</a></div>
                                            <div class="col-xs-2">@item.DueDate.ToString("yyyy-MM-dd")</div>
                                            <div class="col-xs-2"></div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-xs-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr style="border-color:#006DC0;" />
    }

    if (Model != null && Model.ContainmentActions.Count > 0)
                {
        <div class="row" data-intro = "Show containment actions."  data-step="@(step_idx++)">
            <div MYTP="yello" class="row" style="margin-left:3px">
                <div class="col-xs-12">
                    <a data-toggle="collapse" href="#containmenttasks" aria-expanded="false" aria-controls="collapseExample" style="font-size:18px;font-family:'Arial Narrow';">
                        <font color="black"><strong>&nbsp;&nbsp;Containment Action</strong></font>&nbsp;&nbsp;&nbsp;&nbsp;<img src="~/Content/images/icon/extend.png" style="height:25px; width:14px">
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">&nbsp;</div>
            </div>
            <div class="row" style="margin-left:10px">
                <div class="collapse in" id="containmenttasks">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-8">
                                <div class="well" style="margin-bottom:8px;background-color:transparent !important;border-left-color:#006DC0;border-top-color:transparent !important;border-right-color:transparent !important;border-bottom-color:transparent !important;border-top-left-radius:0px;border-bottom-left-radius:0px;padding-top:4px;padding-bottom:4px">
                                    <div class="row">
                                        <div class="col-xs-4">Summary</div>
                                        <div class="col-xs-2">Status</div>
                                        <div class="col-xs-2">Asignee</div>
                                        <div class="col-xs-2">DueDate</div>
                                        <div class="col-xs-2"></div>
                                    </div>
                                    @foreach (var item in Model.ContainmentActions)
                                    {
                                        <div class="row">
                                            <div class="col-xs-4"><a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary.Replace("[Containment]", "")</a></div>
                                            <div class="col-xs-2">@item.Resolution</div>
                                            <div class="col-xs-2"><a href="/User/UserCenter?username=@item.Assignee">@item.Assignee.Split(new char[] { '@' })[0]</a></div>
                                            <div class="col-xs-2">@item.DueDate.ToString("yyyy-MM-dd")</div>
                                            <div class="col-xs-2"></div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-xs-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

                    <hr style="border-color:#006DC0;" />
    }

    if (Model.RootCauseCommentList.Count > 0)
                {
        <div class="row" data-intro = "Show root cause comments." data-step="@(step_idx++)">
            <div MYTP="blue" class="row" style="margin-left:3px">
                <div class="col-xs-12">
                    <a data-toggle="collapse" href="#rootcausecom" aria-expanded="false" aria-controls="collapseExample" style="font-size:18px;font-family:'Arial Narrow';">
                        <font color="black"><strong>&nbsp;&nbsp;RootCause Investigation</strong></font>&nbsp;&nbsp;&nbsp;&nbsp;<img src="~/Content/images/icon/extend.png" style="height:25px; width:14px">
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">&nbsp;</div>
            </div>
            <div class="row" style="margin-left:10px">
                <div class="collapse in" id="rootcausecom">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-11">
                                @foreach (var item in Model.RootCauseCommentList)
