    @{
        ViewBag.Title = "Assign2Me";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    <div class="row">
        <div class="col-lg-1 text-right">
            <img src="~/Content/images/ucicon/Assigned2MeIcons.png" style="height:60px; width:60px">
        </div>
        <div class="col-lg-11">
            <ol class="breadcrumb" style="font-size:18px">
                <li><a href="/User/UserCenter?username=@(ViewBag.RealUserID)">@ViewBag.UserName Center</a></li>
                <li class="active">Assign 2 Me</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>
    <div class="row" style="font-size:18px"><strong>&nbsp;&nbsp;Task List</strong></div>
    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>

    <div class="panel-group" id="accordion">
        <div class="panel panel-default" id="panelpending">
            <div class="panel-heading" style="background-color:#00A4BB;">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-target="#collapsepending" href="#collapsepending" class="collapsed" style="font-family:'Arial Narrow'"><font color="white">Pending&nbsp;&nbsp;&nbsp;@(ViewBag.pendinglist.Count)</font></a>
                </h4>
            </div>
            <div id="collapsepending" class="panel-collapse collapse">
                <div class="panel-body">
                    @foreach (var item in ViewBag.pendinglist)
                    {
                        <div class="row">
                            <div class="col-lg-5"><a href="/Project/ProjectDetail?ProjectKey=@item.ProjectKey">[@item.ProjectKey]&nbsp;</a> <a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-2">Reporter: <a href="/User/UserCenter?username=@item.Reporter">@item.Reporter.Split(new char[] { '@' })[0]</a></div>
                            <div class="col-lg-1">@item.ReportDate.ToString("MM/dd-yy")</div>
                            <div class="col-lg-1"><a data-toggle="tooltip" title="move to working" href="/Issue/MoveTask2Working?issuekey=@(item.IssueKey)&myaction=Assign2Me"><font color="#006DC0"><span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span></font></a></div>
                            <div class="col-lg-2"></div>
                        </div>
                        <div class="row" style="margin:-0.25em;">
                            <div class="col-lg-12">&nbsp;</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="panel panel-default" id="panelworking">
            <div class="panel-heading" style="background-color:#006DC0;">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-target="#collapseworking" href="#collapseworking" class="collapsed" style="font-family:'Arial Narrow'"><font color="white">Working&nbsp;&nbsp;&nbsp;@(ViewBag.workinglist.Count)</font></a>
                </h4>
            </div>
            <div id="collapseworking" class="panel-collapse collapse">
                <div class="panel-body">
                    @foreach (var item in ViewBag.workinglist)
                    {
                        <div class="row">
                            <div class="col-lg-5"><a href="/Project/ProjectDetail?ProjectKey=@item.ProjectKey">[@item.ProjectKey]&nbsp;</a> <a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-2">Reporter: <a href="/User/UserCenter?username=@item.Reporter">@item.Reporter.Split(new char[] { '@' })[0]</a></div>
                            <div class="col-lg-1">@item.ReportDate.ToString("MM/dd-yy")</div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-2"></div>
                        </div>
                        <div class="row" style="margin:-0.25em;">
                            <div class="col-lg-12">&nbsp;</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="panel panel-default" id="paneldone">
            <div class="panel-heading" style="background-color:#00C28D;">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-target="#collapsedone" href="#collapsedone" class="collapsed" style="font-family:'Arial Narrow'"><font color="white">Done&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@(ViewBag.donelist.Count)</font></a>
                </h4>
            </div>
            <div id="collapsedone" class="panel-collapse collapse">
                <div class="panel-body">
                    @foreach (var item in ViewBag.donelist)
                    {
                        <div class="row">
                            <div class="col-lg-5"><a href="/Project/ProjectDetail?ProjectKey=@item.ProjectKey">[@item.ProjectKey]&nbsp;</a> <a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-2">Reporter: <a href="/User/UserCenter?username=@item.Reporter">@item.Reporter.Split(new char[] { '@' })[0]</a></div>
                            <div class="col-lg-1">@item.ReportDate.ToString("MM/dd-yy")</div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-2"></div>
                        </div>
                        <div class="row" style="margin:-0.25em;">
                            <div class="col-lg-12">&nbsp;</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
