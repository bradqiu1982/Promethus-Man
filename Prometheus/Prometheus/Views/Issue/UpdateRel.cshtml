                                    {
                                        <input class="form-control text-box single-line" value="" readonly="readonly" type="text" />
                                    }
                                    else
                                    {
                                        <input class="form-control text-box single-line" value="@Model.ResolvedDate.ToString("yyyy-MM-dd")" readonly="readonly" type="text" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Line Category</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.LineCategory" readonly="readonly" type="text" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Qual Type</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.QualType" readonly="readonly" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Test Type</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.TestType" readonly="readonly" type="text" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Failure Interval</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.FailureInterval" readonly="readonly" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Failure</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" data-toggle="tooltip" title="@Model.TestFailure" value="@Model.TestFailure" readonly="readonly" type="text" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Location</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.Location" readonly="readonly" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Request ID</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.RequestID" readonly="readonly" type="text" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Module SN</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" data-toggle="tooltip" title="@Model.ModuleSN" value="@Model.ModuleSN" readonly="readonly" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Fail Rate</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.FailQTY/@Model.TotalQTY" readonly="readonly" type="text" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Rel Engineer</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.Reporter" readonly="readonly" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <label class="control-label col-xs-4" for="prioritylist">Priority</label>
                                <div class="col-xs-8">
                                    @Html.DropDownList("prioritylist", null, new { @id = "prioritylist", @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <label class="control-label col-xs-4" for="assigneelist">Assignee</label>
                                <div class="col-xs-8">
                                    @Html.DropDownList("assigneelist", null, new { @id = "assigneelist", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <label class="control-label col-xs-4" for="resolutionlist">Status<font color="red">*</font></label>
                                <div class="col-xs-8">
                                    @if (ViewBag.isassignee != null && ViewBag.isassignee)
                                    {
                                        @Html.DropDownList("resolutionlist", null, new { @id = "resolutionlist", @class = "form-control", @onchange = "chooseissuetag()" })
                                    }
                                    else
                                    {
                                        @Html.DropDownList("resolutionlist", null, new { @id = "resolutionlist", @class = "form-control", @readonly = "readonly" })
                                    }
                                </div>
                                @if (ViewBag.isassignee != null
                                    && ViewBag.isassignee
                                    && Model.RootCauseCommentList.Count > 0)
                                {
                                    <script type="text/javascript">
                                    function chooseissuetag() {
                                        if (document.getElementById("resolutionlist")
                                            && (document.getElementById("resolutionlist").value === "Fixed"
                                            || document.getElementById("resolutionlist").value === "Done")) {
                                            $('#issuetag').modal({ backdrop: 'static' });
                                        }
                                    }
                                    </script>
                                }
                                else
                                {
                                    <script type="text/javascript">
                                    function chooseissuetag() {
                                    }
                                    </script>
                                }
                            </div>
                            <div class="col-xs-6">
                                <label class="control-label col-xs-4" for="DueDate">DueDate<font color="red">*</font></label>
                                <div class="col-xs-8">
                                    @if (Model != null && string.Compare(Model.DueDate.ToString("yyyy-MM-dd"), "0001-01-01") != 0)
                                    {
                                        <input class="form-control text-box single-line" value="@Model.DueDate.ToString("yyyy-MM-dd")" data-val="true" data-val-required="The DueDate field is required." id="DueDate" name="DueDate" type="text" />
                                    }
                                    else
                                    {
                                        <input class="form-control text-box single-line" data-val="true" data-val-required="The DueDate field is required." id="DueDate" name="DueDate" type="text" value="" />
                                    }
                                    <span class="field-validation-valid text-danger" data-valmsg-for="DueDate" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <script type="text/javascript">
                            $(document).ready(function () {
                                $("#DueDate").datepicker({
                                    changeMonth: true,
                                    changeYear: true,
                                    dateFormat: 'yy-mm-dd'
                                });
                            });
                            </script>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <label class="control-label col-xs-4" for="FVCode">FV</label>
                                <div class="col-xs-8">
                                    @if (Model != null && !string.IsNullOrEmpty(Model.FVCode))
                                    {
                                        <input class="form-control text-box single-line" value="@Model.FVCode" data-val="true" data-val-length="The field must be a string with a minimum length of 2 and a maximum length of 25." data-val-length-max="25" data-val-length-min="2" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$" id="FVCode" name="FVCode" type="text" />
                                    }
                                    else
                                    {
                                        <input class="form-control text-box single-line" data-val="true" data-val-length="The field must be a string with a minimum length of 2 and a maximum length of 25." data-val-length-max="25" data-val-length-min="2" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$" id="FVCode" name="FVCode" type="text" value="" />
                                    }
                                    <span class="field-validation-valid text-danger" data-valmsg-for="FVCode" data-valmsg-replace="true"></span>
                                </div>
                            </div>

                            <div class="col-xs-6">
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>

        <div class="row">
            <div class="col-xs-2" style="font-family:'Arial Narrow';font-size:18px"><strong>&nbsp;&nbsp;Related People</strong></div>
            <div class="col-xs-10">
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12" data-toggle="tooltip" data-placement="center" title="Exampel: Email Address; Email Address;Email Address;...">
                            @if (Model != null && !string.IsNullOrEmpty(Model.RelativePeoples))
                            {
                                <textarea class="form-control" name="RPeopleAddr" id="RPeopleAddr" onclick="chooserelatedpeople()" style="min-width: 100%;min-height:40px;overflow-y: scroll;overflow-x: scroll;" data-val="true" data-val-length="The field must be a string with a minimum length of 6 and a maximum length of 800." data-val-length-max="800" data-val-length-min="6" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$">@Model.RelativePeoples</textarea>
                            }
                            else
                            {
                                <textarea class="form-control" name="RPeopleAddr" id="RPeopleAddr" onclick="chooserelatedpeople()" style="min-width: 100%;min-height:40px;overflow-y: scroll;overflow-x: scroll;" data-val="true" data-val-length="The field must be a string with a minimum length of 6 and a maximum length of 800." data-val-length-max="800" data-val-length-min="6" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$"></textarea>
                            }
                        </div>
                        <span class="field-validation-valid text-danger" data-valmsg-for="RPeopleAddr" data-valmsg-replace="true"></span>
                    </div>
                    <script type="text/javascript">
                        function chooserelatedpeople() {
                            document.getElementById("towhoinput1").value = document.getElementById("RPeopleAddr").value;
                        $('#relatedmodal').modal({ backdrop: 'static' });
                    }

                    function fillreleatepeople() {
                        $('#relatedmodal').modal('hide');
                        document.getElementById("RPeopleAddr").value = document.getElementById("towhoinput1").value;
                        document.getElementById("RPeopleAddr").focus();
                    }
                    </script>
                </div>
            </div>
        </div>

        <hr style="border-color:#006DC0;" />

        <div class="row">
            <div MYTP="green" class="row" style="margin-left:3px">
                <div class="col-xs-2">
                    <a data-toggle="collapse" href="#attachwell" aria-expanded="false" aria-controls="collapseExample" style="font-size:18px;font-family:'Arial Narrow';">
                        <font color="black"><strong>&nbsp;&nbsp;@(Model.AttachList.Count) Attachements</strong></font>&nbsp;&nbsp;&nbsp;&nbsp;<img src="~/Content/images/icon/extend.png" style="height:25px; width:auto">
                    </a>
                </div>
                <div class="col-xs-10">
                    <div class="col-xs-3">
                        <span class="btn btn-default btn-file" id="choosefile3" style="padding:0px;background-color:transparent !important;border-color:transparent !important;">
                            <img src="~/Content/images/icon/Add.png" MYTP="HOVER" style="height:25px; width:auto" data-intro="Using edit mode to add attachment." data-step="2"> 
                            <input type="file" name="files3" id="file3" runat="server" onchange="ShowFileNames3(this)" />
                        </span>
                    </div>
                    <div class="col-xs-9">
                        <div class="col-xs-11">
                            <label class="control-label" id="showfile3" name="showfile3"></label>
                        </div>
                        <div class="col-xs-1">
                            <input class="form-control text-box single-line" value="" id="attachmentupload" name="attachmentupload" type="hidden" />
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                function ShowFileNames3(oFile) {
                    $('#showfile3').text(oFile.value);
                    document.getElementById("attachmentupload").value = oFile.value;
                    $('#attachtag').modal({ backdrop: 'static' });
                }

                function attachsubmit() {
                    $('#attachtag').modal('hide');
                    $('#issueform').submit();
                    return false;
                }
                </script>
            </div>
            <div class="row">
                <div class="col-xs-12">&nbsp;</div>
            </div>

            <div class="row" style="margin-left:10px">
                <div class="collapse in" id="attachwell">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12">
                                @if (Model != null && Model.AttachList.Count > 0)
                                {
                                    foreach (var item in Model.AttachList)
                                    {
                                        var realfn = "";
                                        if (item.Contains("<a href"))
                                        {
                                            var tempfn = item.Split(new string[] { "<a href=", "target=" }, StringSplitOptions.None)[1].Replace("\"", "").Trim();
                                            var tempfns = tempfn.Split(new string[] { "/" }, StringSplitOptions.None);
                                            realfn = tempfns[tempfns.Length - 1];
                                        }
                                        else
                                        {
                                            var tempfns = item.Split(new string[] { "/" }, StringSplitOptions.None);
                                            realfn = tempfns[tempfns.Length - 1].Trim();
                                        }

                                        if (item.Contains("<a href"))
                                        {
                                            <div class="row">
                                                @Html.Raw(item);
                                            </div>
                                        }
                                        else
                                        {
                                            var fns = item.Split(new char[] { '/' });
                                            var fn = fns[fns.Length - 1];

                                            <div class="row">
                                                <div class="col-xs-1"></div>
                                                <div class="col-xs-6">
                                                    <a href="@item" target="_blank"><span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>@fn</a>
                                                </div>
                                                <div class="col-xs-1" data-toggle="tooltip" title="Delete">
                                                    @if (ViewBag.isassignee != null && ViewBag.isassignee)
                                                    {
                                                        <img src="~/Content/images/icon/delete2.png" MYTP="HOVER" style="height:30px; width:18px" onclick="DeleteAttachment('@realfn')">
                                                    }
                                                </div>
                                                <div class="col-xs-4"></div>
                                            </div>
                                        }
                                    }

                                }

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <script type="text/javascript">
                function DeleteAttachment(oBT) {
                    if (confirm("Do you real want to delete this attachment?")) {
                        window.location.href = '/Issue/DeleteAttachment?issuekey=' + document.getElementById("HIssueKeyForDelete").value + '&filename=' + oBT
                    }
                    else {
                        window.location.href = '/Issue/UpdateIssue?issuekey=' + document.getElementById("HIssueKeyForDelete").value
                    }
                }
            </script>
        </div>

        <hr style="border-color:#006DC0;" />

    if (Model != null && Model.GeneralActions.Count > 0)
    {
        <div class="row">
            <div  MYTP="yello"  class="row" style="margin-left:3px">
                <div class="col-xs-12">
                    <a data-toggle="collapse" href="#subtasks" aria-expanded="false" aria-controls="collapseExample" style="font-size:18px;font-family:'Arial Narrow';">
                        <font color="black"><strong>&nbsp;&nbsp;@(Model.GeneralActions.Count) Sub Tasks</strong></font>&nbsp;&nbsp;&nbsp;&nbsp;<img src="~/Content/images/icon/extend.png" style="height:25px; width:auto">
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">&nbsp;</div>
            </div>
            <div class="row" style="margin-left:10px">
                <div class="collapse in" id="subtasks">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-8">
                                <div class="well" style="margin-bottom:8px;background-color:transparent !important;border-left-color:#006DC0;border-top-color:transparent !important;border-right-color:transparent !important;border-bottom-color:transparent !important;border-top-left-radius:0px;border-bottom-left-radius:0px;padding-top:4px;padding-bottom:4px">
                                    <div class="row">
                                        <div class="col-xs-4">Summary</div>
                                        <div class="col-xs-2">Status</div>
                                        <div class="col-xs-2">Asignee</div>
                                        <div class="col-xs-2">DueDate</div>
                                        <div class="col-xs-2"></div>
                                    </div>
                                    @foreach (var item in Model.GeneralActions)
                                    {
                                        <div class="row">
                                            <div class="col-xs-4"><a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></div>
                                            <div class="col-xs-2">@item.Resolution</div>
                                            <div class="col-xs-2"><a href="/User/UserCenter?username=@item.Assignee">@item.Assignee.Split(new char[] { '@' })[0]</a></div>
                                            <div class="col-xs-2">@item.DueDate.ToString("yyyy-MM-dd")</div>
                                            <div class="col-xs-2"></div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-xs-3"></div>
                        </div>
                    </div>
                </div>
