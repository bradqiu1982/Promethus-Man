
@{
    ViewBag.Title = "NeoMapDataAnalysis";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<script src="~/Scripts/jquery.flexdatalist.min.js" type="text/javascript"></script>

<div class="row">
    <ol class="breadcrumb" style="width:600px">
        <li>Data Analysis</li>
        <li class="active">NeoMap Data Analysis</li>
    </ol>
</div>

<script src="~/Scripts/heatmap.js"></script>
<script src="~/Scripts/highcharts-more.js"></script>

@using (Html.BeginForm("NeoMapDataAnalysis", "DataAnalyze", FormMethod.Post, new { enctype = "multipart/form-data", id = "neomapform", name = "neomapform" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">

        <div class="row">
            <div class="col-xs-3">
                <label class="form-control">Query Condition</label>
            </div>
            <div class="col-xs-6">
                <div class="col-xs-7">

                    <input id="leftquerylist" name="leftquerylist" list="leftquerys" placeholder="Please input wafer" class="form-control text-box single-line" type="text" />
                    <datalist id="leftquerys">
                        @foreach (var item in ViewBag.queryvallist)
                        {
                            <option value="@item">@item</option>
                        }
                    </datalist>
                </div>
                <div class="col-xs-5">
                    @Html.DropDownList("leftdatafieldlist", null, new { @id = "leftdatafieldlist", @name = "leftdatafieldlist", @class = "form-control" })
                </div>
                <script type="text/javascript">
                            $(document).ready(function () {
                                $("#leftquerylist").flexdatalist({
                                    minLength: 0,
                                    searchContain: true,
                                    maxShownResults:300
                                });
                            });
                </script>
            </div>

        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-3">
                    <label class="form-control">Compare Condition (optional)</label>
            </div>
            <div class="col-xs-6">
                <div class="col-xs-7">

                    <input id="rightquerylist" name="rightquerylist" list="rightquerys" placeholder="Please input compare wafer" class="form-control text-box single-line" type="text" />
                    <datalist id="rightquerys">
                        @foreach (var item in ViewBag.queryvallist)
                        {
                            <option value="@item">@item</option>
                        }
                    </datalist>
                </div>
                <div class="col-xs-5">
                    @Html.DropDownList("rightdatafieldlist", null, new { @id = "rightdatafieldlist", @name = "rightdatafieldlist", @class = "form-control" })
                </div>
                <script type="text/javascript">
                            $(document).ready(function () {
                                $("#rightquerylist").flexdatalist({
                                    minLength: 0,
                                    searchContain: true,
                                    maxShownResults:300
                                });
                            });
                </script>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">&nbsp;</div>
    </div>


    <div class="form-group">
        <div class="row">
            <div class="col-xs-6">
                <button class="btn btn-primary" type="button" onclick="compairneomap()" class="btn btn-default" style="width:10.5em;">Submit</button>
            </div>
        </div>
        <script type="text/javascript">
            function compairneomap() {
                if ((document.getElementById("leftquerylist").value && document.getElementById("leftdatafieldlist").value.indexOf("Please") == -1)
                    || (document.getElementById("rightquerylist").value && document.getElementById("rightdatafieldlist").value.indexOf("Please") == -1)) {
                    $('#neomapform').submit();
                    return false;
                }
            }
        </script>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="row">
                        <div class="col-11">
                            @if (ViewBag.lefthotscript != null)
                            {
                                <div id="lefthotscript" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                                @Html.Raw(ViewBag.lefthotscript)
                            }
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="row">
                        <div class="col-1">
                        </div>
                        <div class="col-11">
                            @if (ViewBag.righthotscript != null)
                            {
                                <div id="righthotscript" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                                @Html.Raw(ViewBag.righthotscript)
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="row">
                        <div class="col-11">
                            @if (ViewBag.leftnormaldistr != null)
                            {
                                <div id="leftnormaldistr" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                                @Html.Raw(ViewBag.leftnormaldistr)
                            }
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="row">
                        <div class="col-1">
                        </div>
                        <div class="col-11">
                            @if (ViewBag.rightnormaldistr != null)
                            {
                                <div id="rightnormaldistr" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                                @Html.Raw(ViewBag.rightnormaldistr)
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="row">
                        <div class="col-11">
                            @if (ViewBag.leftboxplot != null)
                            {
                                <div id="leftboxplot" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                                @Html.Raw(ViewBag.leftboxplot)
                            }
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <div class="row">
                        <div class="col-1">
                        </div>
                        <div class="col-11">
                            @if (ViewBag.rightboxplot != null)
                            {
                                <div id="rightboxplot" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                                @Html.Raw(ViewBag.rightboxplot)
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                    </div>
                </div>
            </div>
        </div>


    </div>
}


