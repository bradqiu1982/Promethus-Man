
@{
    ViewBag.Title = "MemberList";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<link href="~/Content/UserPermission.css" rel="stylesheet" />
<script src="~/Scripts/permission.js" type="text/javascript"></script>
<script>
    $(function () {
        UserPermission.memberlist();
    })
</script>

<div class="row">
    <div class="col-sm-2">
        <nav class="nav-sidebar">
            <ul class="nav">
                <li class="active"><a href="/Permission/MemberList">Members</a></li>
                <li><a href="/Permission/GroupList">Groups</a></li>
                <li><a href="/Permission/RoleList">Roles</a></li>
                <li><a href="/Permission/Menus">Menus</a></li>
                <li><a href="/Permission/Functions">Functions</a></li>
                <li><a href="/Permission/Operations">Operation</a></li>
                @*<li class="nav-divider"></li>*@
            </ul>
        </nav>
    </div>
    <div class="col-sm-10">
        <div class="row">
            <div class="nav navbar-nav navbar-left">
                <ol class="breadcrumb">
                    <li><a href="javascript:;">Permission</a></li>
                    <li class="active">Members</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="m-op m-row">
                <input type="button" class="btn btn-success" id="btn-add-member" name="btn-add-member" value="Add Member" />
            </div>
            <div class="m-content">
                <table class="table table-condensed">
                    <caption>
                        <div class="col-xs-4 tb-total">
                            <span>Total: @ViewBag.TotalCnt</span>
                        </div>
                        <div class="search-container col-xs-4">
                            <div class="input-group">
                                <input type="text" class="form-control" id="tb-search" name="tb-search" placeholder="Search Keys" value="@ViewBag.Keywords" />
                                <span class="input-group-addon"><span class="glyphicon glyphicon-search" id="m-btn-search"></span></span>
                            </div>
                        </div>
                    </caption>
                    <thead>
                        <tr>
                            <th>Job Num</th>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Tel</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(ViewBag.MemberList != null){
                            foreach (var item in ViewBag.MemberList) {
                                <tr>
                                    <td>@item.JobNum</td>
                                    <td>@item.Email</td>
                                    <td>@item.Name</td>
                                    <td>@item.Tel</td>
                                    <td>
                                        <a data-id="@item.ID" class="edit-member">Edit</a>
                                        <a data-id="@item.ID" class="del-member">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                @Html.Partial("~/Views/Shared/_Pagination.cshtml")
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-add-member" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="m-title">Add Member</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="m-uid" name="m-uid" />
                <div class="row m-row">
                    <label class="col-xs-3">Job Num</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control" id="modal-jobnum" name="modal-jobnum" />
                    </div>
                </div>
                <div class="row m-row">
                    <label class="col-xs-3">Email</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control" id="modal-mail" name="modal-mail" />
                    </div>
                </div>
                <div class="row m-row">
                    <label class="col-xs-3">Name</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control" id="modal-name" name="modal-name" />
                    </div>
                </div>
                <div class="row m-row">
                    <label class="col-xs-3">Tel</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control" id="modal-tel" name="modal-tel" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="m-btn-submit">Submit</button>
            </div>
        </div>
    </div>
</div>
