<script src="../../ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("UpdateRel", "Issue", FormMethod.Post, new { enctype = "multipart/form-data", id = "issueform", name = "issueform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-xs-2" MYTP="orange" style="font-family:'Arial Narrow';font-size:18px"><strong>&nbsp;&nbsp;Information</strong></div>
            <div class="col-xs-10">
            @if (Model != null)
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <label class="control-label col-xs-4" for="projectlist">Project</label>
                                <div class="col-xs-8">
                                    @Html.DropDownList("projectlist", null, new { @id = "projectlist", @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <label class="control-label col-xs-4">Summary</label>
                                <div class="col-xs-8">
                                    <input class="form-control" data-toggle="tooltip" title="@Model.Summary" text-box single-line" value="@Model.Summary" readonly="readonly" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Case ID</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.CaseID" readonly="readonly" type="text" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Product</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.ProductType" readonly="readonly" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Issue Open Date</label></div>
                                <div class="col-xs-8">
                                    <input class="form-control text-box single-line" value="@Model.ReportDate.ToString("yyyy-MM-dd")" readonly="readonly" type="text" />
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-4"><label class="control-label">Close Date</label></div>
                                <div class="col-xs-8">
