
@{
    ViewBag.Title = "TestPNDesc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="font-size:18px">
            <li><a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll">All Projects</a></li>
            @if (ViewBag.PNDES != null)
            {
                <li class="active">PN List of @ViewBag.PNDES</li>
            }
            else
            {
                <li class="active">PN List</li>
            }

        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>


@if (Model != null)
{
    var idx = 0;

    <table id="pndatatable" class="display" width="100" cellspacing="0">
        <thead>
            @foreach (var line in Model)
            {
                <tr>
                    @foreach (var item in line)
                    {
                        <th>@item</th>
                    }
                </tr>
                break;
            }
        </thead>

        <tbody>
            @foreach (var line in Model)
            {
                if (idx == 0)
                {
                    idx = idx + 1;
                    continue;
                }

                <tr>
                    @foreach (var item in line)
                    {
                        <td>@item</td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#pndatatable').DataTable({
                'iDisplayLength': 50,
                'aLengthMenu': [[25, 50, 100, -1],
                                [25, 50, 100, "All"]]
            });
                    } );
    </script>
}