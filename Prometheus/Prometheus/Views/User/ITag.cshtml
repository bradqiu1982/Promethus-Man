
@{
    ViewBag.Title = "ITag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-1 text-right">
        <img src="~/Content/images/ucicon/ITagIcons.png" style="height:60px; width:60px">
    </div>
    <div class="col-lg-11">
        <ol class="breadcrumb" style="font-size:18px">
            <li><a href="/User/UserCenter?username=@(ViewBag.RealUserID)">@ViewBag.UserName Center</a></li>
            <li class="active">I Tag</li>
        </ol>
    </div>
</div>

@if (ViewBag.projectlist != null && ViewBag.taglist != null)
{
    using (Html.BeginForm("AddUserShareTag", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "tagform", name = "tagform" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-4"><h3 style="font-family:'Arial Narrow';">Add New Tags</h3></div>
            <div class="col-lg-8"></div>
        </div>

        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>

        <div class="row">
            <div class="col-lg-3">@Html.DropDownList("projectlist", null, new { @id = "projectlist", @class = "form-control", @style = "font-family:'Arial Narrow';border-color:#006DC0;", @onchange = "AddBookedTag()" })</div>
            <div class="col-lg-3">@Html.DropDownList("taglist", null, new { @id = "taglist", @class = "form-control", @style = "font-family:'Arial Narrow';border-color:#006DC0;", @onchange = "AddBookedTag()" })</div>
            <div class="col-lg-6"></div>
        </div>

        <script type="text/javascript">
            function AddBookedTag()
            {
                $('#tagform').submit();
            }
        </script>
    }
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>
<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>
<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

@if (ViewBag.usertaglist != null)
{
    using (Html.BeginForm("UpdateUserShareTag", "User", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()


            <div class="row">
                <div class="col-lg-3"><h3 style="font-family:'Arial Narrow';">Reserved I Tag</h3></div>
                <div class="col-lg-9"></div>
            </div>

            <div class="row">
                <div class="col-lg-12">&nbsp;</div>
            </div>


        for (var idx = 0; idx < ViewBag.usertaglist.Count; idx++)
        {
                <div class="col-lg-3">
                    <div class="col-lg-2">
                        <input type="checkbox" style="border:1px double #006DC0;" checked="checked" id="check@(idx)" name="check@(idx)" value="@(ViewBag.usertaglist[idx])"/>
                    </div>
                    <div class="col-lg-10" style="text-align:left;">
                        <label class="control-label"  style="font-family:'Arial Narrow';">@(ViewBag.usertaglist[idx])</label>
                    </div>
                </div>
        }

        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-lg-12">&nbsp;</div>
        </div>

            <div class="row">
                <div class="col-lg-9"></div>
                <div class="col-lg-3">
                    <div class="col-lg-6">
                        <input type="submit" value="Update Tag" id="updatetag" name="updatetag" class="btn btn-default" style="font-family:'Arial Narrow';background-color:#006DC0;color:white;" />
                    </div>
                    <div class="col-lg-6">
                        <input type="submit" value="Match Tag" id="matchpostfile" name="matchpostfile" class="btn btn-default" style="font-family:'Arial Narrow';background-color:#006DC0;color:white;" />
                    </div>
                </div>
            </div>

    }
}
