@{
    ViewBag.Title = "TXO Analysis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <ol class="breadcrumb" style="font-size:18px">
        <li><a href="/User/UserCenter?username=@(ViewBag.RealUserID)">@ViewBag.UserName Center</a></li>
        <li class="active">TXO Analysis</li>
    </ol>
</div>

<script src="~/Scripts/highcharts.js"></script>
<script src="~/Scripts/heatmap.js"></script>
<script src="~/Scripts/exporting.js"></script>

@using (Html.BeginForm("TXOTestData", "DataAnalyze", FormMethod.Post, new { enctype = "multipart/form-data",id = "txoform",name = "txoform" }))
{
@Html.AntiForgeryToken()
<div class="form-group">
    <div class="row">
        <div class="col-lg-6">
            <div class="col-lg-7">
                @Html.DropDownList("leftquerylist", null, new { @id = "leftquerylist", @name = "leftquerylist", @class = "form-control" })
            </div>
            <div class="col-lg-5">
                @Html.DropDownList("leftdatafieldlist", null, new { @id = "leftdatafieldlist", @name = "leftdatafieldlist", @class = "form-control"})
            </div>
        </div>
        <div class="col-lg-6">
            <div class="col-lg-7">
                @Html.DropDownList("rightquerylist", null, new { @id = "rightquerylist", @name = "rightquerylist", @class = "form-control"})
            </div>
            <div class="col-lg-5">
                @Html.DropDownList("rightdatafieldlist", null, new { @id = "rightdatafieldlist", @name = "rightdatafieldlist", @class = "form-control"})
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-lg-12">
            <button MYTP="BT" type="button" onclick="compairtxo()" class="btn btn-default" style="width:10.5em;">Submit</button>
        </div>
    </div>
    <script type="text/javascript">
        function compairtxo()
        {
            if ((document.getElementById("leftquerylist").value.indexOf("Please") == -1 && document.getElementById("leftdatafieldlist").value.indexOf("Please") == -1)
                || (document.getElementById("rightquerylist").value.indexOf("Please") == -1 && document.getElementById("rightdatafieldlist").value.indexOf("Please") == -1))
            {
                $('#txoform').submit();
            }
        }
    </script>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-11">
                        @if (ViewBag.lefthotscript != null)
                        {
                            @Html.Raw(ViewBag.lefthotscript)
                            <div id="lefthotscript" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                        }
                    </div>
                    <div class="col-1">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-1">
                    </div>
                    <div class="col-11">
                        @if (ViewBag.righthotscript != null)
                        {
                            @Html.Raw(ViewBag.righthotscript)
                            <div id="righthotscript" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-11">
                        @if (ViewBag.leftnormaldistr != null)
                        {
                            @Html.Raw(ViewBag.leftnormaldistr)
                            <div id="leftnormaldistr" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                        }
                    </div>
                    <div class="col-1">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-1">
                    </div>
                    <div class="col-11">
                        @if (ViewBag.rightnormaldistr != null)
                        {
                            @Html.Raw(ViewBag.rightnormaldistr)
                            <div id="rightnormaldistr" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-1">
        </div>
        <div class="col-lg-10">
            <div class="form-group">
                <div class="row">
                    @if (ViewBag.combinenormaldistr != null)
                    {
                        @Html.Raw(ViewBag.combinenormaldistr)
                        <div id="combinenormaldistr" style="min-width: 600px; height: 600px; margin: 0 auto"></div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-1">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-11">
                        @if (ViewBag.leftboxplot != null)
                        {
                            @Html.Raw(ViewBag.leftboxplot)
                            <div id="leftboxplot" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                        }
                    </div>
                    <div class="col-1">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <div class="row">
                    <div class="col-1">
                    </div>
                    <div class="col-11">
                        @if (ViewBag.rightboxplot != null)
                        {
                            @Html.Raw(ViewBag.rightboxplot)
                            <div id="rightboxplot" style="min-width: 310px; height: 600px; margin: 0 auto"></div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-1">
        </div>
        <div class="col-lg-10">
            <div class="form-group">
                <div class="row">
                    @if (ViewBag.combineboxplot != null)
                    {
                        @Html.Raw(ViewBag.combineboxplot)
                        <div id="combineboxplot" style="min-width: 600px; height: 600px; margin: 0 auto"></div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-1">
        </div>
    </div>

</div>
}