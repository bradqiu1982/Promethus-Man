                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="issuetagLabel">Share Issue Tag</h4>
                    </div>
                    <div class="row"></div>
                    <hr />
                    <div class="row"></div>
                    @if (ViewBag.tobechoosetags != null)
                {
                    for (var idx = 0; idx < ViewBag.tobechoosetags.Count; idx++)
                    {
                            <div class="col-lg-4">
                                <div class="col-lg-3">
                                    <input type="checkbox" id="issuetagcheck@(idx)" name="issuetagcheck@(idx)" value="@(ViewBag.tobechoosetags[idx])" />
                                </div>
                                <div class="col-lg-9">
                                    <label class="control-label">@(ViewBag.tobechoosetags[idx])</label>
                                </div>
                            </div>
                        }
                    }
                    <div class="row"></div>
                    <hr />
                    <div class="row"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal" id="towhotag" tabindex="-1" role="dialog" aria-labelledby="towhoLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="towhoLabel">Push Task</h4>
                    </div>
                    <div class="row"></div>
                    <div class="row col-lg-12">
                        <div class="col-lg-3">
                            <label class="control-label">To Who</label>
                        </div>
                        <div class="col-lg-9">
                            @Html.DropDownList("towholist", null, new { @id = "towholist", @class = "form-control" })
                        </div>
                    </div>
                    <hr />
                    <div class="row col-lg-12">
                        <div class="col-lg-3">
                            <label class="control-label"></label>
                        </div>
                        <div class="col-lg-9" data-toggle="tooltip" data-placement="center" title="Exampel: Email Address; Email Address;Email Address;...">
                            <textarea class="form-control col-lg-12" name="towhoinput" id="towhoinput" style="height:100px;min-width:300px;"></textarea>
                        </div>
                    </div>
                    <div class="row"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-success" onclick="realpush()">Push</button>
                    </div>
                </div>
            </div>
        </div>
