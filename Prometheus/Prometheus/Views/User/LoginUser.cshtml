@model Prometheus.Models.UserViewModels

@{
    ViewBag.Title = "LoginUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">&nbsp;&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 text-center"><h2>Welcome to WUXI Engineering</h2></div>
    <div class="col-lg-2"></div>
</div>

@Html.Raw(string.IsNullOrEmpty(ViewBag.loginerror) ? "&nbsp;" : ViewBag.loginerror)
@if (!string.IsNullOrEmpty(ViewBag.loginerror))
{
    ViewBag.loginerror = "";
}


@using (Html.BeginForm("LoginUser", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    
    <div class="row">
        <div class="col-lg-12">&nbsp;&nbsp;</div>
    </div>

    <div class="row well" style="background-image:url('/Content/images/FinisarBuilding.jpg');background-color:#5B9BD5;margin-top:-25px">
        <div class="col-lg-9">
        </div>

        <div class="col-lg-3">
            <div class="form-group">
                <div class="col-lg-12">&nbsp;&nbsp;</div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">&nbsp;&nbsp;</div>
            </div>
                <div class="form-group">
                    <div class="col-lg-12" data-intro = "Input your Finisar Email"  data-step="1">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "FINISAR Email"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12" data-intro = "Default Password:abc@123"  data-step="2">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password: abc@123" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-8 col-lg-4" data-intro="You can login from this" data-step="3">
                        <input type="submit" style="background-color:transparent !important;font-family:'Arial Narrow';" class="btn btn-default" id="Login" name="Login" value="Log in" />
                    </div>
                </div>
            <div class="form-group">
                <div class="col-lg-offset-6 col-lg-4" data-intro="You can change password here" data-step="4">
                    <input type="submit" style="background-color:transparent !important;border:none;padding:0!important;font-family:'Arial Narrow';cursor: pointer;" class="btn btn-default" id="ForgetPassword" name="ForgetPassword" value="Change Password" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">&nbsp;&nbsp;</div>
            </div>

            <div class="form-group">
                <div class="col-lg-12">&nbsp;&nbsp;</div>
            </div>
        </div>

    </div>
 
    @*<div class="form-group">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-10">
            <span class="badge alert-success">Default Password: abc@123</span>
        </div>
    </div>*@

