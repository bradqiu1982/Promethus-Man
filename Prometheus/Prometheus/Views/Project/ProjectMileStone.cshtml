
@{
    ViewBag.Title = "ProjectMileStone";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<link type="text/css" rel="stylesheet" href="~/Content/bootstrap-datepicker/bootstrap-datepicker.min.css" />
<link type="text/css" rel="stylesheet" href="~/Content/pro_milestones.css" />
<script type="text/javascript" src="~/Scripts/canvg.js"></script>
<script type="text/javascript" src="~/Scripts/copy2clipboard.js"></script>
<script type="text/javascript" src="~/Scripts/pro_milestones.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>

<script type="text/javascript">
    $(function () {
        ProMilestones.init();
    })
</script>
<div class="row">
    <div class="nav navbar-nav navbar-left">
        <img src="~/Content/images/PJ/milestone.png" height="40" width="40">
    </div>
    <div class="nav navbar-nav navbar-left">
        <ol class="breadcrumb">
            <li data-toggle="modal" data-target="#myModal">
                <a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll" data-intro="Back to ALL Project."
                   data-step="6">All Projects</a>
            </li>
            <li><a href="/Project/ProjectDetail?ProjectKey=@(ViewBag.ProjectKey)">@(ViewBag.ProjectKey)</a></li>
            <li class="active">Project MileStone</li>
        </ol>
    </div>
</div>

<div class="row v-fitter">
    <input type="hidden" id="pKey" name="pKey" value="@ViewBag.ProjectKey" />
    <input type="hidden" id="withprivate" name="withprivate" value="@ViewBag.withprivate" />
    <label class="col-xs-2">Date Period</label>
    <div class="col-xs-3">
        <div class="input-group date" data-date="@ViewBag.sDate"
             data-date-format="yyyy-mm-dd">
            <input type="text" class="form-control"
                   id="sdate" name="sdate" value="@ViewBag.sDate" readonly>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </span>
        </div>
    </div>
    <div class="col-xs-1 text-center">~</div>
    <div class="col-xs-3">
        <div class="input-group date" data-date="@ViewBag.eDate"
             data-date-format="yyyy-mm-dd">
            <input type="text" class="form-control"
                   id="edate" name="edate" value="@ViewBag.eDate" readonly>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </span>
        </div>
    </div>
    <div class="col-xs-2">
        <input type="button" class="btn btn-success" name="btn-search" id="btn-search" value="Search">
        <input type="button" class="btn btn-warning" name="btn-clear" id="btn-clear" value="Clear">
    </div>
</div>
<div class="v-container">
    <div class="bs-callout bs-callout-danger">Dashboard</div>
    <div class="v-box">
        <div id="pro-charts"></div>
    </div>
</div>
<div class="v-milestone">
    <div class="bs-callout bs-callout-info">Actions
        <a><span class="add-action glyphicon glyphicon-plus-sign"></span></a>
        <a data-toggle="tooltip" title="Show My Private MileStone"><span class="show-action glyphicon glyphicon-eye-open"></span></a>
    </div>
    <div class="row action-lists">
        <ul class="list-group">
            @foreach (var item in ViewBag.actionlist)
            {
                <li class="list-group-item list-group-item-@(item.IsPublish == "1"?"success":"warning")" data-actionid="@item.ID">
                    <span class="span-right">
                        <a class="public-actions" title="@(item.IsPublish == "1" ?"Cancel ":"")Publish" data-ispublish="@item.IsPublish">
                            <span class="glyphicon glyphicon-share-alt @(item.IsPublish == "1" ?"private-icon":"")"></span>
                        </a>
                        <a class="edit-actions" title="Edit">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a class="invalid-actions" title="Delete">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </span>
                    <span class="l-date">@(Convert.ToDateTime(item.AddDate).ToString("yyyy/MM/dd"))</span>
                    <span class="l-content">@item.Action</span>
                </li>
            }
        </ul>
    </div>
</div>

<div id="modal-milestone-edit" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit Milestones</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" name="m-actionid" id="m-actionid" value="">
                <div class="row">
                    <label class="col-xs-3 m-label">Date</label>
                    <div class="col-xs-8">
                        <div class="input-group date" data-date=""
                             data-date-format="yyyy-mm-dd">
                            <input type="text" class="form-control"
                                   id="m-date" name="m-date" value="" readonly>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <label class="col-xs-3 m-label">Add Action</label>
                    <div class="col-xs-8">
                        <textarea class="form-control" id="m-action" name="m-action" rows="2"></textarea>
                    </div>
                </div>
                <div class="row">
                    <label class="col-xs-3 m-label">Is Share?</label>
                    <div class="col-xs-8">
                        <div style="padding: 15px 0;">
                            <input type="radio" name="m-type" id="m-public" value="1">
                            <label for="m-public">Public</label>
                            <input type="radio" name="m-type" id="m-private" value="2">
                            <label for="m-private">Private</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="m-save">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="hidden">
    <a id="exportLink"></a>
</div>