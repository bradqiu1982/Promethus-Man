            <hr />

            <div class="col-lg-12">
                <div class="form-group">
                    <label class="control-label">Root Cause Investigation</label>
                </div>

                <div class="form-group">
                    <div>
                        <textarea name="rootcauseeditor" id="rootcauseeditor" rows="10" cols="80"></textarea>
                        <script>
                            CKEDITOR.replace('rootcauseeditor', { htmlEncodeOutput: true, filebrowserUploadUrl: '/userfiles/Upload.ashx' });
