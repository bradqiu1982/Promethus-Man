
@{
    ViewBag.Title = "I Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        <div class="col-xs-7">
            <div class="nav navbar-nav navbar-left">
                <img src="~/Content/images/ucicon/IAssignedIcons.png" style="height:45px; width:45px">
            </div>
            <div class="nav navbar-nav navbar-left">
                <ol class="breadcrumb" style="width:600px">
                    <li><a href="/User/UserCenter?username=@(ViewBag.RealUserID)">@ViewBag.UserName Center</a></li>
                    <li class="active">I Assign</li>
                </ol>
            </div>
        </div>
    </div>


@if (ViewBag.iassignlist != null && ViewBag.iassignlist.Count > 0)
{
    var idx = 0;
    <table id="pndatatable" class="display" cellspacing="0">
        <thead style="background-color:#006DC0;font-family:'Arial Narrow';">
            @foreach (var line in ViewBag.iassignlist)
            {
                <tr>
                    <th style="font-size:16px"><font color="white">@line[0]</font></th>
                    <th style="font-size:16px"><font color="white">@line[1]</font></th>
                    <th style="font-size:16px"><font color="white">@line[2]</font></th>
                    <th style="font-size:16px"><font color="white">@line[3]</font></th>
                    <th style="font-size:16px"><font color="white">@line[4]</font></th>
                    <th style="font-size:16px"><font color="white">@line[5]</font></th>
                    <th style="font-size:16px"><font color="white">@line[6]</font></th>
                </tr>
                break;
            }
        </thead>

        <tbody>
            @foreach (var line in ViewBag.iassignlist)
            {
                if (idx == 0)
                {
                    idx = idx + 1;
                    continue;
                }

                if (string.Compare(line[7], "MAIN") == 0)
                {
                    <tr>
                        <th style="font-size:12px">@line[0]</th>
                        <th style="font-size:12px"><a href="/Issue/UpdateIssue?issuekey=@line[6]">@line[1]</a></th>
                        <th style="font-size:12px">@line[2]</th>
                        <th style="font-size:12px">@line[8]</th>
                        <th style="font-size:12px"><a href="/User/UserCenter?username=@line[3]">@line[3].Split(new char[] { '@' })[0]</a></th>
                        <th style="font-size:12px">@line[4]</th>
                        <th style="font-size:12px">@line[5]</th>
                    </tr>
                }
                else
                {
                    <tr>
                        <td style="font-size:11px"><span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>@line[0]</td>
                        <td style="font-size:11px"><a href="/Issue/UpdateIssue?issuekey=@line[6]">@line[1]</a></td>
                        <td style="font-size:11px">@line[2]</td>
                        <th style="font-size:11px">@line[8]</th>
                        <td style="font-size:11px"><a href="/User/UserCenter?username=@line[3]">@line[3].Split(new char[] { '@' })[0]</a></td>
                        <td style="font-size:11px">@line[4]</td>
                        <td style="font-size:11px">@line[5]</td>
                    </tr>
                }

            }
        </tbody>
    </table>

    <script type="text/javascript">
            $(document).ready(function() {
                $('#pndatatable').DataTable({
                    'iDisplayLength': 50,
                    'aLengthMenu': [[25, 50, 100, -1],
                                    [25, 50, 100, "All"]],
                    "bAutoWidth": false,
                    "aaSorting": [],
                    "order": [],
                    "aoColumns": [
                    { sWidth: '10%' },
                    { sWidth: '40%' },
                    { sWidth: '10%' },
                    { sWidth: '10%' },
                    { sWidth: '10%' },
                    { sWidth: '10%' },
                    { sWidth: '10%' }],
                    dom: 'lBfrtip',
                    buttons: ['copyHtml5', 'csv', 'excelHtml5']
                });
            });
    </script>
}

