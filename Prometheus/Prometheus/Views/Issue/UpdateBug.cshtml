        <div class="row">

                <div class="form-group">
                    <label class="control-label">Comment</label>
                </div>

                    <div class="form-group">
                        <div>
                            <textarea name="editor1" id="editor1" rows="10" cols="80"></textarea>
                            <script>
                                CKEDITOR.replace('editor1', { htmlEncodeOutput: true, filebrowserUploadUrl: '/userfiles/Upload.ashx' });
                            </script>
                        </div>
                    </div>
        </div>

        <hr/>
        <div class="row">
            <div class="form-group">
                @if (ViewBag.isassignee != null
                    && ViewBag.isassignee
                    && Model.FailureDetailCommentList.Count > 0
                    && Model.RootCauseCommentList.Count > 0)
                {
                    <div class="col-lg-6">
                        <div class="col-lg-2">
                            <label class="control-label" for="analysetitle">DebugTree Analyse Title</label>
                        </div>
                        <div class="col-lg-10">
                            <input class="form-control text-box single-line" id="analysetitle" name="analysetitle" data-val="true" data-val-length="The field must be a string with a minimum length of 2 and a maximum length of 200." data-val-length-max="200" data-val-length-min="2" data-val-regex="The field should not contain \'" data-val-regex-pattern="^(?!.*&#39;).*$" type="text" value="" />
