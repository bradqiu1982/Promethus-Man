@model Prometheus.Models.PJReportViewModels
@{
    ViewBag.Title = "ITag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ITag</h2>

<hr />

@using (Html.BeginForm("ITag", "PJReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    if (ViewBag.PJList != null)
    {
        var pjidx = 0;
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Project List</div>
                    <div class="panel-body">
                        
                            @foreach (var item in ViewBag.PJList)
                            {
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                @if (Model != null && Model.projects.Contains(@item))
                                                {
                                                    <input type="checkbox" value="true" checked="checked" id="pckbox@(pjidx)" name="pckbox@(pjidx)"/>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" value="true" id="pckbox@(pjidx)" name="pckbox@(pjidx)"/>
                                                }
                                                
                                            </span>
                                            <input type="text" class="form-control" value="@item" id="PJKEY@(pjidx)" name="PJKEY@(pjidx)" readonly="readonly"/>
                                        </div>
                                    </div>
                                </div>
                                pjidx = pjidx + 1;
                            }
                        
                    </div>
                </div>
            </div>
        </div>
    }

    if (ViewBag.RepTypeList != null)
    {
        var pjidx = 0;
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Report type List</div>
                    <div class="panel-body">
                            @foreach (var item in ViewBag.RepTypeList)
                            {
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                @if (Model != null && Model.reporttypes.Contains(@item))
                                                {
                                                    <input type="checkbox" value="true" checked="checked" id="rckbox@(pjidx)" name="rckbox@(pjidx)" />
                                                }
                                                else
                                                {
                                                    <input type="checkbox" value="true" id="rckbox@(pjidx)" name="rckbox@(pjidx)"/>
                                                }
                                                
                                            </span>
                                            <input type="text" class="form-control" value="@item" id="RPType@(pjidx)" name="RPType@(pjidx)" readonly="readonly"/>
                                        </div>
                                    </div>
                                </div>

                                pjidx = pjidx + 1;
                            }
                     </div>
                </div>
            </div>
        </div>

    }

    if (ViewBag.ReportTimeList != null)
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Report Time</div>
                    <div class="panel-body">
                        @Html.DropDownList("ReportTimeList", null, new { @id = "ReportTimeList", @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    }

    if (ViewBag.PJList != null && ViewBag.RepTypeList != null && ViewBag.ReportTimeList != null)
    {
        <div class="row">
            <div class="col-xs-2">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
            <div class="col-xs-10">
            </div>
        </div>
    }

}
