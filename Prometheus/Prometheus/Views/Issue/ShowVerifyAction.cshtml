@model IEnumerable<Prometheus.Models.IssueViewModels>

@{
    ViewBag.Title = "ShowVerifyAction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <div class="row">
        <div class="col-lg-1 text-right">
            <img src="~/Content/images/PJ/Task.png" style="height:45px; width:45px">
        </div>
        <div class="col-lg-11">
            <ol class="breadcrumb" style="font-size:18px">
                <li><a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll">All Projects</a></li>
                <li class="active">Show Verify Action</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-1 text-right">
            <img src="~/Content/images/PJ/Task.png" style="height:45px; width:45px">
        </div>
        <div class="col-lg-11">
            <ol class="breadcrumb" style="font-size:18px">
                <li><a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll">All Projects</a></li>
                <li><a data-toggle="tooltip" title="Goto Project Detail" href="/Project/ProjectDetail?ProjectKey=@(Model.ElementAt(0).ProjectKey)">Project Detail</a></li>
                <li><a data-toggle="tooltip" title="Goto Project Task" href="/Project/ProjectIssues?ProjectKey=@(Model.ElementAt(0).ProjectKey)">Project Task</a></li>
                <li><a data-toggle="tooltip" title="Goto Task" href="/Issue/UpdateIssue?issuekey=@(Model.ElementAt(0).IssueKey)">Update Task</a></li>
                <li class="active">@ViewBag.pagetitle</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">&nbsp;</div>
    </div>


    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">@ViewBag.pagetitle</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">Summary</div>
                    <div class="col-lg-2">Status</div>
                    <div class="col-lg-2">Asignee</div>
                    <div class="col-lg-2">DueDate</div>
                    <div class="col-lg-2"></div>
                </div>

                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-lg-4"><a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></div>
                        <div class="col-lg-2">@item.Resolution</div>
                        <div class="col-lg-2"><a href="/User/UserCenter?username=@item.Assignee">@item.Assignee.Split(new char[] { '@' })[0]</a></div>
                        <div class="col-lg-2">@item.DueDate.ToString("yyyy-MM-dd")</div>
                        <div class="col-lg-2"></div>
                    </div>
                }
            </div>
        </div>
    </div>
}


