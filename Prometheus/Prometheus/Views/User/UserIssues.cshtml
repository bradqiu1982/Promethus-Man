
@{
    ViewBag.Title = "UserIssues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-xs-12">&nbsp;</div>
</div>

<div class="row">
    <ol class="breadcrumb" style="font-size:18px">
        <li><a href="/User/UserCenter?username=@(ViewBag.RealUserID)">@ViewBag.uname Center</a></li>
        <li class="active">@ViewBag.UserName Issues</li>
    </ol>
</div>

<div class="row">
    <div class="col-xs-12">&nbsp;</div>
</div>


@if (ViewBag.userissuelist != null)
{
    var idx = 0;
    <table id="pndatatable" class="display" cellspacing="0">
        <thead style="background-color:#006DC0;font-family:'Arial Narrow';">
            @foreach (var line in ViewBag.userissuelist)
            {
                <tr>
                    <th style="font-size:16px"><font color="white">@line[0]</font></th>
                    <th style="font-size:16px"><font color="white">@line[1]</font></th>
                    <th style="font-size:16px"><font color="white">@line[2]</font></th>
                    <th style="font-size:16px"><font color="white">@line[3]</font></th>
                    <th style="font-size:16px"><font color="white">@line[4]</font></th>
                    <th style="font-size:16px"><font color="white">@line[5]</font></th>
                    <th style="font-size:16px"><font color="white">@line[6]</font></th>
                </tr>
                break;
            }
        </thead>

        <tbody>
            @foreach (var line in ViewBag.userissuelist)
            {
                if (idx == 0)
                {
                    idx = idx + 1;
                    continue;
                }

                    <tr>
                        <th style="font-size:12px">@line[0]</th>
                        <th style="font-size:12px"><a href="/Issue/UpdateIssue?issuekey=@line[7]">@line[1]</a></th>
                        <th style="font-size:12px">@line[2]</th>
                        <th style="font-size:12px">@line[3]</th>
                        <th style="font-size:12px">@line[4]</th>
                        <th style="font-size:12px">@line[5]</th>
                        @if (!string.IsNullOrEmpty(line[6]))
                        {
                            <th style="font-size:12px">
                                <a href="/Issue/IssueAttach?issuekey=@line[7]" target="_blank">
                                    <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
                                </a>
                            </th>
                        }
                        else
                        {
                            <th style="font-size:12px"></th>
                        }
                    </tr>

            }
        </tbody>
    </table>

            <script type="text/javascript">
        $(document).ready(function() {
            $('#pndatatable').DataTable({
                'iDisplayLength': 50,
                'aLengthMenu': [[25, 50, 100, -1],
                                [25, 50, 100, "All"]],
                "bAutoWidth": false,
                "aaSorting": [],
                "order": [],
                "aoColumns": [
                { sWidth: '10%' },
                { sWidth: '40%' },
                { sWidth: '10%' },
                { sWidth: '10%' },
                { sWidth: '10%' },
                { sWidth: '10%' },
                { sWidth: '10%' }]
            });
                    } );
            </script>
}

