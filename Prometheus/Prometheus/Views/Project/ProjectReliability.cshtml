@model IEnumerable<Prometheus.Models.IssueViewModels>

@{
    ViewBag.Title = "ProjectReliability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="nav navbar-nav navbar-left">
        <img src="~/Content/images/PJ/REL.png" style="height:35px; width:35px;margin-right: 15px;">
    </div>
    <div class="nav navbar-nav navbar-left">
        <ol class="breadcrumb" style="width:600px">
            <li><a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll">All Projects</a></li>
            @if (ViewBag.data.Count > 0)
            {
                <li><a data-toggle="tooltip" title="Goto Project Detail" href="/Project/ProjectDetail?ProjectKey=@(ViewBag.pKey)">Project Detail</a></li>
            }
            <li class="active">@(ViewBag.pKey + " ")Reliability Task</li>
        </ol>
    </div>
</div>
<div class="row row-margin">
    <input type="hidden" id="pKey" name="pKey" value="@ViewBag.pKey" />
    <div class="col-xs-1">
        <label class="control-label" for="StartDate">StartDate</label>
    </div>
    <div class="col-xs-2">
        <input class="form-control text-box single-line datepicker" id="StartDate"
               name="StartDate" type="text" value="@ViewBag.sDate" />
    </div>
    <div class="col-xs-1">
        <label class="control-label" for="EndDate">EndDate</label>
    </div>
    <div class="col-xs-2">
        <input class="form-control text-box single-line datepicker" id="EndDate"
               name="EndDate" type="text" value="@ViewBag.eDate" />
    </div>
    <div class="col-xs-2">
        <input type="button" class="btn btn-success" name="btn-search" id="btn-search" value="Search" />
    </div>
</div>
@if (ViewBag.data.Count > 0)
{
    if (ViewBag.chartscript != null)
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Failure</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-xs-12">
                            <div id="failurepie" style="min-width: 310px; height: 300px; margin: 0 auto"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.Raw(ViewBag.chartscript)
        <hr />
    }

    var i = 0;
    <table id="firsttable" class="display" cellspacing="0">
        <thead>
            <tr style="color:white;">
                <th style="text-align:center">Product</th>
                <th style="text-align:center">Summary</th>
                <th style="text-align:center">Status</th>
                <th style="text-align:center">FV</th>

                <th style="text-align:center">Failure Verification</th>
                <th style="text-align:center">Containment Action</th>
                <th style="text-align:center">RootCause</th>
                <th style="text-align:center">Corrective Action</th>
                <th style="text-align:center">Verification 4 Corrective</th>

                <th style="text-align:center">Owner</th>
                <th style="text-align:center">Rel.Engineer</th>
                <th style="text-align:center">DueDate</th>
                <th style="text-align:center">LYT</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.data)
            {

                <tr>
                    <td style="text-align:center">@item.Value.ProductType</td>
                    <td style="text-align:center;font-size:9px;" data-toggle="tooltip" title="@item.Value.Summary"><a href="/Issue/UpdateIssue?issuekey=@item.Value.IssueKey">@item.Value.Summary</a></td>
                    <td style="text-align:center">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus2(item.Value.Resolution))</td>
                    <td style="text-align:center">@item.Value.FVCode</td>

                    @if (item.Value.NFailureVerifyActions != null && item.Value.NFailureVerifyActions.Count > 0)
                    {
                        <td style="text-align:center">
                            <a href="/Issue/ShowVerifyAction?verifytype=@(Prometheus.Models.RELSubIssueType.FAILVERIFYACTION)&issuekey=@(item.Value.IssueKey)" target="_blank">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(item.Value.NFailureVerifyActions[0].Resolution))</a>
                        </td>
                    }
                    else
                    {
                        <td style="text-align:center">N/A</td>
                    }

                    @if (item.Value.NContainMent != null && item.Value.NContainMent.Count > 0)
                    {
                        <td style="text-align:center"><a href="/Issue/ShowContainmentAction?issuekey=@(item.Value.IssueKey)" target="_blank">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(item.Value.NContainMent[0].Resolution))</a></td>
                    }
                    else
                    {
                        <td style="text-align:center">N/A</td>
                    }

                    @if (item.Value.NRootCauseList != null && item.Value.NRootCauseList.Count > 0)
                    {
                        if (item.Value.NRootCauseList[0].Comment.Contains("ROOTCAUSE: to be edited"))
                        {
                            <td style="text-align:center">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(Prometheus.Models.Resolute.Pending))</td>
                        }
                        else
                        {
                            <td style="text-align:center"><a href="/Issue/ShowRootCause?issuekey=@(item.Value.IssueKey)" target="_blank">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(Prometheus.Models.Resolute.Done))</a></td>
                        }
                    }
                    else
                    {
                        <td style="text-align:center">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(Prometheus.Models.Resolute.Pending))</td>
                    }

                    @if (item.Value.NCorrectMent.Count > 0)
                    {
                        <td style="text-align:center"><a href="/Issue/ShowCorrectiveAction?issuekey=@(item.Value.IssueKey)" target="_blank">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(item.Value.NCorrectMent[0].Resolution))</a></td>
                    }
                    else
                    {
                        <td style="text-align:center">N/A</td>
                    }

                    @if (item.Value.NCorrectiveVerifyActions.Count > 0)
                    {
                        <td style="text-align:center"><a href="/Issue/ShowVerifyAction?verifytype=@(Prometheus.Models.RELSubIssueType.VERIFYCORRECTIVEACTION)&issuekey=@(item.Value.IssueKey)" target="_blank">@Html.Raw(@Prometheus.Models.Resolute.ColorStatus(item.Value.NCorrectiveVerifyActions[0].Resolution))</a></td>
                    }
                    else
                    {
                        <td style="text-align:center">N/A</td>
                    }

                    <td style="text-align:center"><a href="/User/UserCenter?username=@item.Value.Assignee">@item.Value.Assignee.Split(new string[] { "@" }, StringSplitOptions.None)[0]</a></td>
                    <td style="text-align:center"><a href="/User/UserCenter?username=@item.Value.Reporter">@item.Value.Reporter.Split(new string[] { "@" }, StringSplitOptions.None)[0]</a></td>
                    <td style="text-align:center">@item.Value.DueDate.ToString("yy-MM-dd")</td>
                    <td style="text-align:center"><img src="~/Content/images/icon/LowYield.png" MYTP="HOVER" data-toggle="tooltip" title="Critical Error Alarm" style="height:16px;width:16px" onclick="LowYieldWarning('@item.Value.IssueKey')"></td>
                </tr>
                i = i + 1;
            }
        </tbody>
    </table>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#firsttable").DataTable({
                'scrollX': true,
                'iDisplayLength': 50,
                'aLengthMenu': [[25, 50, 100, -1],
                [25, 50, 100, "All"]],
                "aaSorting": false,
                "order": false
            });
            $(".datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'yy-mm-dd'
            });
        });

        $("body").on('click', '#btn-search', function () {
            var pKey = $.trim($('#pKey').val());
            var sDate = $.trim($('#StartDate').val());
            var eDate = $.trim($('#EndDate').val());
            window.location.href = '/Project/ProjectReliability?ProjectKey=' + pKey + '&sDate=' + sDate + '&eDate=' + eDate;
        })

        function LowYieldWarning(oBT) {
            if (confirm("Warning: only FA assignee can trigger Critical Error Alarm.")) {
                var myurl = "/Project/LowYieldWarn?IssueKey=" + oBT;
                window.open(myurl, '_blank');
            }
        }
    </script>
}

