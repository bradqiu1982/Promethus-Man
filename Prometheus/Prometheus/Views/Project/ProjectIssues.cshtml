                                <tr>
                                    <td style="text-align:center;font-size:12px"><a href="/Issue/UpdateIssue?issuekey=@item.IssueKey">@item.Summary</a></td>
                                    <td style="text-align:center;font-size:12px"><a href="/User/UserCenter?username=@item.Assignee">@item.Assignee.Split(new char[] { '@' })[0]</a></td>
                                    <td style="text-align:center;font-size:12px">@item.ReportDate.ToString("dd/MM")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <script type="text/javascript">
                        $(document).ready(function() {
