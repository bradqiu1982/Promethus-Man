@model Prometheus.Models.ProjectErrorViewModels

@{
    ViewBag.Title = "ErrorAttach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb" style="font-size:18px">
            <li><a data-toggle="tooltip" title="Goto ViewAll" href="/Project/ViewAll">All Projects</a></li>
            @if (Model != null)
            {
                <li><a data-toggle="tooltip" title="Goto Debug Tree" href="/Project/ProjectError?ProjectKey=@(Model.ProjectKey)">Debug Tree</a></li>
            }

            @if (Model != null)
            {
                <li class="active">@Model.ProjectKey @Model.OrignalCode Error Attach</li>
            }
            else
            {
                <li class="active">Debug Tree Attach</li>
            }
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">&nbsp;</div>
</div>


        @if (Model != null && Model.AttachList.Count > 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Attachments for @Model.ProjectKey @Model.OrignalCode</h3>
                        </div>
                        <div class="panel-body">
                            @foreach (var item in Model.AttachList)
                            {

                                var fns = item.Split(new char[] { '/' });
                                var fn = fns[fns.Length - 1];
                                <div class="row">
                                    <a href="@item" target="_blank">
                                        <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>@fn
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }



